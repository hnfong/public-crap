<!DOCTYPE html><html>
<head><title>Twisted Solitaire</title></head>
<body>
<div id="game"></div>
<script>
let d=document,g=d.getElementById("game"),c=[],p=[],s=[],t=0,u=13,v=52,w=d.createElement("div");
for(let i=0;i<v;i++)c[i]={n:i%u+1,s:i<u?"♠":i<2*u?"♥":i<3*u?"♦":"♣"};
for(let i=0;i<7;i++)p[i]=[],s[i]=[];
for(let i=0;i<7;i++)for(let j=0;j<=i;j++)p[i][j]=c.pop();
function f(e){
  let x=e.target.id.split("_"),y=x[0],z=x[1],a=d.getElementById(y+"_"+z).innerHTML;
  if(y=="p")for(let i=0;i<7;i++)if(d.getElementById("s_"+i).innerHTML=="")return d.getElementById("s_"+i).innerHTML=a;
  for(let i=0;i<7;i++)if(d.getElementById("s_"+i).innerHTML==a)d.getElementById("s_"+i).innerHTML="";
}
for(let i=0;i<7;i++){
  for(let j=0;j<=i;j++){
    let x=d.createElement("div");
    x.id="p_"+i+"_"+j;x.className="card";x.innerHTML=p[i][j].n+p[i][j].s;x.onclick=f;w.appendChild(x);
  }
  let y=d.createElement("div");
  y.id="s_"+i;y.className="stack";w.appendChild(y);
}
g.appendChild(w);
</script>
<style>
.card{width:50px;height:70px;border:1px solid black;margin:5px;text-align:center;line-height:70px;cursor:pointer;}
.stack{width:50px;height:70px;border:1px solid black;margin:5px;text-align:center;line-height:70px;}
</style>
</body>
</html> [end of text]


