import java.util.regex.*;
import java.util.Scanner;
import java.text.DecimalFormat;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        Pattern pattern = Pattern.compile("(\\d+(\\.\\d+)?)([kmMG]?)");
        Matcher matcher = pattern.matcher(input);
        double sum = 0;
        while (matcher.find()) {
            double value = Double.parseDouble(matcher.group(1));
            String suffix = matcher.group(3);
            if (suffix.equals("k") || suffix.equals("K")) {
                sum += value * 1024;
            } else if (suffix.equals("m") || suffix.equals("M")) {
                sum += value * 1024 * 1024;
            } else if (suffix.equals("g") || suffix.equals("G")) {
                sum += value * 1024 * 1024 * 1024;
            } else {
                sum += value;
            }
        }
        DecimalFormat df = new DecimalFormat("#.00");
        System.out.println(df.format(sum));
        System.out.printf("%.2f K%n", sum / 1024);
        System.out.printf("%.2f M%n", sum / (1024 * 1024));
        System.out.printf("%.2f G%n", sum / (1024 * 1024 * 1024));
    }
}
