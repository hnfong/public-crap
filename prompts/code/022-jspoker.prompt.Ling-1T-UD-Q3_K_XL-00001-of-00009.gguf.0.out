<!DOCTYPE html><html><head><title>Poker</title><style>body{font-family:sans-serif}#deck,#hand{display:flex;gap:8px;margin:10px 0}#deck,#hand>div{padding:8px;border:1px solid #ccc;border-radius:6px;background:#f9f9f9}#hand>div{cursor:pointer}#controls{margin:10px 0}button{margin-right:8px}</style></head><body><h1>Draw Poker</h1><div id="deck">Deck: <span id="deckCount">52</span></div><div id="hand"></div><div id="controls"><button id="draw">Draw/Redraw</button><button id="reset">New Hand</button></div><div id="result"></div><script>const suits='♥♦♣♠',ranks='A23456789TJQK';let deck=[],hand=[];function shuffle(a){for(let i=a.length-1;i>0;i--){let j=Math.floor(Math.random()*(i+1));[a[i],a[j]]=[a[j],a[i]]}return a}function makeDeck(){deck=[];for(const s of suits)for(const r of ranks)deck.push(r+s)}function drawCard(){return deck.pop()}function evaluate(hand){const vals=hand.map(c=>'A23456789TJQK'.indexOf(c[0])+1).sort((a,b)=>a-b);const suits=hand.map(c=>c[1]);const isFlush=suits.every(s=>s===suits[0]);const isStraight=vals.every((v,i)=>i===0||v===vals[i-1]+1) || (vals[0]===1 && vals[1]===10 && vals[2]===11 && vals[3]===12 && vals[4]===13);let score=0,label='High Card';if(isStraight && isFlush){score=9;label='Straight Flush'}else if(new Set(hand.map(c=>c[0])).size===2){const counts=vals.map(v=>vals.filter(x=>x===v).length).sort();score=counts[3]===4?8:7;label=score===8?'Four of a Kind':'Full House'}else if(isFlush){score=6;label='Flush'}else if(isStraight){score=5;label='Straight'}else if(new Set(hand.map(c=>c[0])).size===3){score=vals.map(v=>vals.filter(x=>x===v).length).some(c=>c===3)?4:3;label=score===4?'Three of a Kind':'Two Pair'}else if(new Set(hand.map(c=>c[0])).size===4){score=2;label='One Pair'}else{score=1}return{score,label}}function render(){document.getElementById('deckCount').textContent=deck.length;const h=document.getElementById('hand');h.innerHTML='';hand.forEach((c,i)=>{const d=document.createElement('div');d.textContent=c;d.onclick=()=>{d.classList.toggle('held')};h.appendChild(d)});document.getElementById('result').textContent=''}function newHand(){makeDeck();shuffle(deck);hand=[drawCard(),drawCard(),drawCard(),drawCard(),drawCard()];render()}function redraw(){Array.from(document.querySelectorAll('#hand>div')).forEach((el,i)=>{if(!el.classList.contains('held')){hand[i]=drawCard()}});render();const res=evaluate(hand);document.getElementById('result').textContent=res.label}document.getElementById('draw').onclick=redraw;document.getElementById('reset').onclick=newHand;newHand()</script></body></html> [end of text]


