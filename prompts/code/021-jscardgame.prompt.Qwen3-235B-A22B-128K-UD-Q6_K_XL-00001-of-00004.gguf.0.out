<!DOCTYPE html><html><head><title>Twisted Solitaire</title><style>body{background:#2c3e50;color:#ecf0f1;font-family:sans-serif;margin:0;padding:0;display:flex;flex-direction:column;align-items:center}canvas{background:#1abc9c;margin-top:20px;border:2px solid #fff}h1{margin-top:10px}</style></head><body><h1>Twisted Solitaire</h1><canvas id="game" width="800" height="600"></canvas><script>const canvas=document.getElementById("game"),ctx=canvas.getContext("2d"),cols=8,rows=8,size=70,margin=10;let grid=Array(rows).fill().map(()=>Array(cols).fill(0)),selected=null;function draw(){ctx.clearRect(0,0,canvas.width,canvas.height);for(let y=0;y<rows;y++)for(let x=0;x<cols;x++){ctx.fillStyle="#fff";ctx.fillRect(x*(size+margin),y*(size+margin),size,size);ctx.fillStyle="#000";ctx.fillText(grid[y][x],x*(size+margin)+30,y*(size+margin)+45)}}canvas.addEventListener("click",(e)=>{let rect=canvas.getBoundingClientRect(),x=Math.floor((e.clientX-rect.left)/(size+margin)),y=Math.floor((e.clientY-rect.top)/(size+margin)),val=grid[y][x];if(selected){if(val===selected+1||val===selected-1){grid[y][x]=0;selected=null;draw()}}else if(val>0){selected=val;ctx.fillStyle="red";ctx.fillRect(x*(size+margin),y*(size+margin),size,size);ctx.fillStyle="#fff";ctx.fillText(val,x*(size+margin)+30,y*(size+margin)+45)}});function init(){for(let y=0;y<rows;y++)for(let x=0;x<cols;x++)grid[y][x]=Math.floor(Math.random()*13)+1;draw()}init()</script></body></html> [end of text]


