<!DOCTYPE html><html><head><title>Mini Solitaire</title><style>body{font-family:sans-serif;margin:20px}#d,#w{display:flex;gap:10px}#d div,#w div{width:60px;height:90px;border:1px solid #333;display:flex;align-items:center;justify-content:center;cursor:pointer}#d div{background:#ddd}#w div{background:#fff}</style></head><body><div id="d"></div><div id="w"></div><script>const s=[...Array(52).keys()].map(i=>({v:i%13+1,c:i<13?"H":i<26?"D":i<39?"C":"S"}));let d=[],w=[],f=0;function r(a){return a[Math.floor(Math.random()*a.length)]}function d2h(c){return c.v+" "+c.c}function draw(){document.getElementById("d").innerHTML=d.map(c=>`<div title="${d2h(c)}">${c.v}</div>`).join("");document.getElementById("w").innerHTML=w.map(c=>`<div title="${d2h(c)}">${c.v}</div>`).join("")}function init(){s.sort(()=>0.5-Math.random());d=[...s.slice(0,5),...s.slice(5).map(c=>({...c,h:0}))];w=[];draw()}document.getElementById("d").addEventListener("click",e=>{if(f)return;if(e.target.closest("#d div")){let c=d.find(x=>x===e.target.textContent);if(c.h)return;c.h=1;w.push(c);d=d.filter(x=>x!==c);draw()}})document.getElementById("w").addEventListener("click",e=>{if(f)return;if(e.target.closest("#w div")){let c=w[w.length-1];if(!c)return;w.pop();c.h=0;d.push(c);draw()}})init();</script></body></html> [end of text]


