<!DOCTYPE html><html><head><style>body{font-family:Arial,sans-serif;text-align:center}#cards{display:flex;justify-content:center;gap:10px;margin-top:20px}#cards img{width:60px;height:90px}button{margin-top:20px}</style></head><body><h1>Single Player Poker</h1><div id="cards"></div><button onclick="deal()">Deal</button><script>const suits='♠♥♦♣'.split(''),ranks='23456789TJQKA'.split(''),deck=[],hand=[],score=0;for(let s of suits)for(let r of ranks)deck.push({suit:s,rank:r});function shuffle(a){for(let i=a.length-1;i>0;i--){let j=Math.floor(Math.random()*(i+1));[a[i],a[j]]=[a[j],a[i]]}return a}function deal(){hand=shuffle(deck).slice(0,5);document.getElementById('cards').innerHTML=hand.map(c=>`<img src="https://example.com/card_images/${c.rank}${c.suit}.png">`).join('');checkHand()}function checkHand(){let ranks=hand.map(c=>c.rank),suits=hand.map(c=>c.suit),rankCounts={},suitCounts={};ranks.forEach(r=>(rankCounts[r]=(rankCounts[r]||0)+1));suits.forEach(s=>(suitCounts[s]=(suitCounts[s]||0)+1));let isFlush=Object.values(suitCounts).includes(5),isStraight=ranks.sort().join('')==='2345A'||ranks.every((r,i,a)=>a[i-1]?r.charCodeAt(0)-a[i-1].charCodeAt(0)===1:true);let handType='High Card';if(isStraight&&isFlush)handType='Straight Flush';else if(isFlush)handType='Flush';else if(isStraight)handType='Straight';else if(Object.values(rankCounts).includes(4))handType='Four of a Kind';else if(Object.values(rankCounts).includes(3)&&Object.values(rankCounts).includes(2))handType='Full House';else if(Object.values(rankCounts).includes(3))handType='Three of a Kind';else if(Object.values(rankCounts).filter(c=>c===2).length===2)handType='Two Pair';else if(Object.values(rankCounts).includes(2))handType='One Pair';alert(`Your hand: ${handType}`)}</script></body></html> [end of text]


