import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        String[] parts = input.split(",");
        double sum = 0;
        for (String part : parts) {
            part = part.trim();
            if (part.isEmpty()) continue;
            double num = 0;
            String suffix = "";
            int i = 0;
            while (i < part.length() && Character.isDigit(part.charAt(i)) || part.charAt(i) == '.') {
                num = num * 10 + (part.charAt(i) - '0');
                i++;
            }
            while (i < part.length() && part.charAt(i) == ',') {
                i++;
            }
            while (i < part.length() && (part.charAt(i) == 'k' || part.charAt(i) == 'K' || part.charAt(i) == 'm' || part.charAt(i) == 'M' || part.charAt(i) == 'g' || part.charAt(i) == 'G')) {
                suffix += part.charAt(i);
                i++;
            }
            double multiplier = 1;
            if (suffix.contains("k")) {
                multiplier = 1024;
            } else if (suffix.contains("m")) {
                multiplier = 1024 * 1024;
            } else if (suffix.contains("g")) {
                multiplier = 1024 * 1024 * 1024;
            }
            sum += num * multiplier;
        }
        System.out.println(sum);
        System.out.printf("%.1f k\n", sum / 1024);
        System.out.printf("%.1f M\n", sum / (1024 * 1024));
        System.out.printf("%.1f G\n", sum / (1024 * 1024 * 1024));
    }
}
