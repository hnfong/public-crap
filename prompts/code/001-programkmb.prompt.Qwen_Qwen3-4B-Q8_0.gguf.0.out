import java.util.*;
import java.text.DecimalFormat;
import java.io.*;

public class UnitConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.close();

        List<Double> values = new ArrayList<>();
        String[] tokens = input.split("[,\\s]+");

        for (String token : tokens) {
            if (token.matches("-?\\d+(\\.\\d+)?[kKmMgG]?")) {
                double value = parseValue(token);
                values.add(value);
            }
        }

        double total = 0.0;
        for (double value : values) {
            total += value;
        }

        DecimalFormat df = new DecimalFormat("#.0");
        System.out.println(total);
        System.out.println(df.format(total / 1024.0) + " K");
        System.out.println(df.format(total / (1024.0 * 1024.0)) + " M");
        System.out.println(df.format(total / (1024.0 * 1024.0 * 1024.0)) + " G");
    }

    private static double parseValue(String token) {
        double value = Double.parseDouble(token.replaceAll("[kKmMgG]", ""));
        String suffix = token.replaceAll("\\D", "");
        switch (suffix) {
            case "K": case "k": return value * 1024;
            case "M": case "m": return value * 1024 * 1024;
            case "G": case "g": return value * 1024 * 1024 * 1024;
            default: return value;
        }
    }
}
