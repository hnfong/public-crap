    margin-top: 20px;
    font-weight: bold;
  }
</style>
</head>
<body>

<h1>Simple Poker Game</h1>

<div class="card">
  <p>Card 1: Ace of Spades</p>
</div>

<div class="card">
  <p>Card 2: King of Hearts</p>
</div>

<div class="player">Player 1</div>

<div class="hand">
  <p>Hand: Ace of Spades, King of Hearts, 7 of Diamonds</p>
</div>

<div class="result">
  <p>Your Score: $10.00</p>
</div>

<script>
  let player1Chips = 0;
  let player2Chips = 0;
  let player1Hand = [];
  let player2Hand = [];

  // Function to display the hand
  function displayHand(hand) {
    let handString = "Hand: " + hand.join(", ");
    document.querySelector('.hand').textContent = handString;
  }

  // Function to handle player input
  function handleInput() {
    let playerInput = prompt("Enter your action (e.g., 'buy', 'sell', 'discard'):");

    if (playerInput === null || playerInput === "") {
      return;
    }

    let action = playerInput.toLowerCase();

    if (action === 'buy') {
      player1Chips += 10;
      player1Hand.push("Ace of Spades");
      player1Hand.push("King of Hearts");
      displayHand(player1Hand);
    } else if (action === 'sell') {
      player1Chips -= 10;
      player1Hand.pop();
      displayHand(player1Hand);
    } else if (action === 'discard') {
      player1Chips -= 5;
      player1Hand.pop();
      displayHand(player1Hand);
    } else {
      displayHand(player1Hand);
    }
  }

  // Initial display
  displayHand(player1Hand);

  // Game loop
  while (player1Chips > 0) {
    displayHand(player1Hand);
    let action = prompt("Enter your action (e.g., 'buy', 'sell', 'discard'):");

    if (action === null || action === "") {
      break;
    }

    let action = action.toLowerCase();

    if (action === 'buy') {
      player1Chips += 10;
      player1Hand.push("Ace of Spades");
      player1Hand.push("King of Hearts");
      displayHand(player1Hand);
    } else if (action === 'sell') {
      player1Chips -= 10;
      player1Hand.pop();
      displayHand(player1Hand);
    } else if (action === 'discard') {
      player1Chips -= 5;
      player1Hand.pop();
      displayHand(player1Hand);
    } else {
      displayHand(player1Hand);
    }
  }

  // Determine the winner
  if (player1Chips > player2Chips) {
    console.log("Player 1 wins!");
  } else {
    console.log("Player 2 wins!");
  }
</script>

</body>
</html>
