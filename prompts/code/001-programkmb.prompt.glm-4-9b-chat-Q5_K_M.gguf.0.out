import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class SumNumbersWithSuffixes {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.close();

        Pattern pattern = Pattern.compile("(\\d+(\\.\\d+)?)([kKmMgG])?");
        Matcher matcher = pattern.matcher(input);

        double totalSum = 0.0;
        double kilobytes = 0.0;
        double megabytes = 0.0;
        double gigabytes = 0.0;

        while (matcher.find()) {
            double number = Double.parseDouble(matcher.group(1));
            String suffix = matcher.group(3);

            if (suffix != null) {
                switch (suffix.toLowerCase()) {
                    case "k":
                    case "K":
                        number *= 1024;
                        kilobytes += number;
                        break;
                    case "m":
                    case "M":
                        number *= 1024 * 1024;
                        megabytes += number;
                        break;
                    case "g":
                    case "G":
                        number *= 1024 * 1024 * 1024;
                        gigabytes += number;
                        break;
                }
            }

            totalSum += number;
        }

        System.out.printf("%.0f%n", totalSum);
        System.out.printf("%.0f K%n", kilobytes);
        System.out.printf("%.0f M%n", megabytes);
        System.out.printf("%.0f G%n", gigabytes);
    }
}
