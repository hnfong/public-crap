 <!DOCTYPE html>
 <html>
 <head>
 <title>Poker Game</title>
 </head>
 <body>
 <h1>Poker Game</h1>
 <p id="game-state"></p>
 <script>
 const deck = Array(52).fill(0).map((_, i) => i + 1);
 const suits = ['Hearts', 'Diamonds', 'Clubs', 'Spades'];
 const ranks = ['2', '3', '4', '5', '6', '7', '8', '9', '10', 'Jack', 'Queen', 'King', 'Ace'];
 const game = {
 cards: deck,
 currentBet: 0,
 currentPlayer: 0,
 hand: [],
 bets: []
 };
 const betInput = document.getElementById('bet');
 const dealButton = document.getElementById('deal');
 const handElement = document.getElementById('game-state');
 dealButton.addEventListener('click', () => {
 game.hand = [];
 game.bets = [];
 game.currentBet = 0;
 game.currentPlayer = 0;
 handElement.textContent = '';
 betInput.value = '';
 });
 betInput.addEventListener('input', () => {
 const bet = parseInt(betInput.value);
 if (bet > 0) {
 game.currentBet = bet;
 game.bets.push(game.currentBet);
 handElement.textContent = `Current Bet: ${game.currentBet}`;
 }
 });
 function dealCard() {
 const card = game.cards.pop();
 const cardElement = document.createElement('p');
 cardElement.textContent = `${card} of ${suits[card % 4]}`;
 handElement.appendChild(cardElement);
 game.hand.push(card);
 if (game.hand.length === 5) {
 const handRank = getHandRank(game.hand);
 handElement.textContent = `Your hand: ${game.hand.join(', ')}`;
 const result = getHandResult(handRank);
 handElement.textContent += ` ${result}`;
 }
 }
 function getHandRank(hand) {
 const rank = hand[0];
 if (hand.includes(1)) return 'Royal Flush';
 if (hand.includes(4) && hand.includes(3) && hand.includes(2) && hand.includes(1) && hand.includes(0)) return 'Straight Flush';
 if (hand.includes(4) && hand.includes(3) && hand.includes(2) && hand.includes(1) && hand.includes(0) && hand.includes(5)) return 'Four of a Kind';
 if (hand.includes(4)) return 'Full House';
 if (hand.includes(3) && hand.includes(3) && hand.includes(2) && hand.includes(2) && hand.includes(1)) return 'Flush';
 if (hand.includes(3) && hand.includes(3) && hand.includes(2) && hand.includes(2) && hand.includes(0)) return 'Straight';
 if (hand.includes(3) && hand.includes(3) && hand.includes(2) && hand.includes(2) && hand.includes(1) && hand.includes(5)) return 'Three of a Kind';
 if (hand.includes(3)) return 'Two Pair';
 if (hand.includes(2) && hand.includes(2) && hand.includes(2) && hand.includes(2) && hand.includes(2)) return 'One Pair';
 if (hand.includes(2) && hand.includes(2) && hand.includes(2) && hand.includes(1) && hand.includes(1)) return 'High Card';
 }
 }
 function getHandResult(handRank) {
 if (handRank === 'Royal Flush') return 'Win!';
 if (handRank === 'Straight Flush') return 'Win!';
 if (handRank === 'Four of a Kind') return 'Win!';
 if (handRank === 'Full House') return 'Win!';
 if (handRank === 'Flush') return 'Win!';
 if (handRank === 'Straight') return 'Win!';
 if (handRank === 'Three of a Kind') return 'Win!';
 if (handRank === 'Two Pair') return 'Win!';
 if (handRank === 'One Pair') return 'Win!';
 if (handRank === 'High Card') return 'Lose!';
 }
 </script>
 </body>
 </html> [end of text]


