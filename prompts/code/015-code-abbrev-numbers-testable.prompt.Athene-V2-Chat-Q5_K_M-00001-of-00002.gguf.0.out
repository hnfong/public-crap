def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 10000:
        return f"{round(x / 1000)}K"
    elif x < 100000:
        return f"{round(x / 1000, -1) // 10}K"
    elif x < 1000000:
        return f"{round(x / 1000, 1):.0f}K"
    elif x < 10000000:
        return f"{round(x / 1000000, 1):.1f}M"
    else:
        return f"{round(x / 1000000, -1) // 10}M"
