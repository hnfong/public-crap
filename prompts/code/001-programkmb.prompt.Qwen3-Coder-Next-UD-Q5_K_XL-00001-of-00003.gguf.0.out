import java.util.*;
import java.io.*;

public class Main {
    public static void main(String[] args) throws Exception {
        // Read all input from stdin
        StringBuilder input = new StringBuilder();
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        String line;
        while ((line = reader.readLine()) != null) {
            input.append(line).append("\n");
        }
        reader.close();
        
        String text = input.toString();
        
        // Pattern to match numbers with optional suffixes
        // Handles numbers with commas as thousand separators and optional decimal points
        java.util.regex.Pattern pattern = java.util.regex.Pattern.compile(
            "([0-9,]+(?:\\.[0-9]+)?)\\s*([kKmMgG])?"
        );
        
        java.util.regex.Matcher matcher = pattern.matcher(text);
        
        double totalBytes = 0.0;
        
        while (matcher.find()) {
            String numberStr = matcher.group(1).replace(",", "");
            String suffix = matcher.group(2);
            
            try {
                double value = Double.parseDouble(numberStr);
                
                if (suffix != null) {
                    switch (suffix.charAt(0)) {
                        case 'k':
                        case 'K':
                            value *= 1024;
                            break;
                        case 'm':
                        case 'M':
                            value *= 1024 * 1024;
                            break;
                        case 'g':
                        case 'G':
                            value *= 1024 * 1024 * 1024;
                            break;
                    }
                }
                
                totalBytes += value;
            } catch (NumberFormatException e) {
                // Skip invalid numbers
            }
        }
        
        // Print the total in bytes
        System.out.println(String.format("%.1f", totalBytes));
        
        // Print in KB
        double totalKB = totalBytes / 1024;
        System.out.println(String.format("%.1f k", totalKB));
        
        // Print in MB
        double totalMB = totalBytes / (1024 * 1024);
        System.out.println(String.format("%.1f M", totalMB));
        
        // Print in GB
        double totalGB = totalBytes / (1024 * 1024 * 1024);
        System.out.println(String.format("%.1f G", totalGB));
    }
}
