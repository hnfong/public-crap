def abbrev_num(x):
    """
    Abbreviates a number into a compact, human-readable string.

    Args:
        x: An integer.

    Returns:
        A string representing the number in a compact form (<= 4 characters).
    """
    if x < 1000:
        return str(x)
    elif x < 1000000:
        return f"{round(x / 1000)}K"
    elif x < 1000000000:
        return f"{round(x / 1000000)}M"
    elif x < 1000000000000:
        return f"{round(x / 1000000000)}G"
    elif x < 1000000000000000:
        return f"{round(x / 1000000000000)}T"
    else:
        return f"{round(x / 1000000000000000)}P"
