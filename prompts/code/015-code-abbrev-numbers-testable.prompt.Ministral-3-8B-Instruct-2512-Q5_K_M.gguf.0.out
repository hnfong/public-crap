def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1_000_000:
        return f"{round(x / 1000, 1):.0f}K" if round(x / 1000, 1) % 10 >= 5 else f"{int(x / 1000)}K"
    elif x < 1_000_000_000:
        return f"{round(x / 1_000_000, 1):.0f}M" if round(x / 1_000_000, 1) % 10 >= 5 else f"{int(x / 1_000_000)}M"
    else:
        return f"{round(x / 1_000_000_000, 1):.0f}B" if round(x / 1_000_000_000, 1) % 10 >= 5 else f"{int(x / 1_000_000_000)}B"
