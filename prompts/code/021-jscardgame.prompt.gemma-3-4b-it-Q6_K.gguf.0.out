<!DOCTYPE html>
<html>
<head>
<title>Color Cascade</title>
<style>
body {
  font-family: sans-serif;
}
.card {
  width: 80px;
  height: 120px;
  border: 1px solid black;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 5px;
  cursor: pointer;
}
.card img {
  width: 100%;
  height: 100%;
}
.deck {
  display: flex;
  flex-wrap: wrap;
}
.pile {
  display: flex;
  flex-direction: column;
  margin-left: 20px;
}
</style>
</head>
<body>

<div id="gameContainer"></div>

<script>
const gameContainer = document.getElementById('gameContainer');
const deckSize = 52;
let deck = [];
let piles = [];

function createDeck() {
  const suits = ['H', 'D', 'C', 'S'];
  const ranks = ['2', '3', '4', '5', '6', '7', '8', '9', 'T', 'J', 'Q', 'K', 'A'];
  for (let suit of suits) {
    for (let rank of ranks) {
      deck.push({ suit, rank });
    }
  }
}

function shuffleDeck() {
  for (let i = deckSize - 1; i > 0; i--) {
    const j = Math.floor(Math.random() * (i + 1));
    [deck[i], deck[j]] = [deck[j], deck[i]];
  }
}

function createPiles() {
  for (let i = 0; i < 3; i++) {
    piles.push([]);
  }
}

function dealCards() {
  for (let card of deck) {
    piles[0].push(card);
  }
  deck = [];
  shuffleDeck();
  createPiles();
}

function moveCard(fromPile, toPile) {
  if (piles[fromPile].length > 0) {
    const card = piles[fromPile].pop();
    piles[toPile].push(card);
  }
}

function renderGame() {
  gameContainer.innerHTML = '';

  for (let i = 0; i < 3; i++) {
    const pileDiv = document.createElement('div');
    pileDiv.classList.add('pile');
    pileDiv.innerHTML = `<h3>Pile ${i + 1}</h3>`;

    for (let card of piles[i]) {
      const cardDiv = document.createElement('div');
      cardDiv.classList.add('card');
      const img = document.createElement('img');
      img.src = `https://raw.githubusercontent.com/PokeSprites/poke-sprites/master/sprites_col/platinum/card_${card.rank}_${card.suit}.png`;
      cardDiv.appendChild(img);
      cardDiv.addEventListener('click', () => moveCard(i, 0));
      cardDiv.dataset.pile = i;
      pileDiv.appendChild(cardDiv);
    }

    gameContainer.appendChild(pileDiv);
  }
}

dealCards();
renderGame();

</script>

</body>
</html>
