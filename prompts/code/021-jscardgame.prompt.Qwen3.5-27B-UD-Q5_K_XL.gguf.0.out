<!DOCTYPE html><html><head><style>body{font-family:sans-serif;background:#222;color:#eee;display:flex;flex-direction:column;align-items:center;justify-content:center;height:100vh;margin:0;overflow:hidden}#game{display:grid;grid-template-columns:repeat(7,60px);gap:10px;user-select:none}#score{font-size:24px;margin-bottom:20px}#msg{font-size:18px;margin-top:10px;color:#ffcc00;min-height:24px}.card{width:60px;height:80px;background:#fff;border-radius:5px;display:flex;align-items:center;justify-content:center;font-size:24px;cursor:pointer;box-shadow:0 2px 5px rgba(0,0,0,0.5);transition:transform 0.1s}.card:hover{transform:scale(1.05)}.card.red{color:#d00}.card.black{color:#000}.card.hidden{background:#333;border:2px solid #555;color:transparent}.card.hidden:hover{transform:none}.card.selected{outline:3px solid #ffcc00;transform:translateY(-5px)}#deck{width:60px;height:80px;background:#333;border:2px solid #555;border-radius:5px;cursor:pointer;display:flex;align-items:center;justify-content:center;font-size:24px;color:#777}#deck:hover{background:#444}</style></head><body><div id="score">Score: 0</div><div id="game"></div><div id="msg"></div><script>
const suits=['♠','♥','♣','♦'],colors=['black','red','red','black'];
let deck=[],board=[],score=0,selected=null;
const game=document.getElementById('game'),scoreEl=document.getElementById('score'),msgEl=document.getElementById('msg');
function shuffle(a){for(let i=a.length-1;i>0;i--){const j=Math.floor(Math.random()*(i+1));[a[i],a[j]]=[a[j],a[i]]}return a}
function createDeck(){deck=[];for(let s=0;s<4;s++)for(let v=1;v<=13;v++)deck.push({s,v,c:colors[s],n:v===1?'A':v===11?'J':v===12?'Q':v===13?'K':v})}
function init(){createDeck();shuffle(deck);board=[];for(let i=0;i<7;i++){let col=[];for(let j=0;j<=i;j++){let c=deck.pop();if(j===i)c.hidden=true;col.push(c)}board.push(col)}render();}
function render(){game.innerHTML='';scoreEl.textContent='Score: '+score;for(let i=0;i<7;i++){let col=board[i];for(let j=0;j<col.length;j++){let c=col[j];let el=document.createElement('div');el.className='card'+(c.hidden?' hidden':'')+' '+c.c;if(!c.hidden)el.textContent=c.s;el.dataset.i=i;el.dataset.j=j;el.onclick=()=>clickCard(i,j);if(selected&&selected.i===i&&selected.j===j)el.classList.add('selected');game.appendChild(el)}}}
function clickCard(i,j){let c=board[i][j];if(c.hidden){if(j===board[i].length-1){c.hidden=false;score+=10;msgEl.textContent='Revealed!';setTimeout(()=>msgEl.textContent='',1000)}return}if(!selected){selected={i,j};render()}else{let s=selected;let sc=board[s.i][s.j];let tc=board[i][j];let valid=false;if(s.i===i&&s.j===j){selected=null;render();return}if(s.i===i&&s.j===j-1){valid=true}else if(s.i===i&&s.j===j+1){valid=true}else if(s.j===j&&s.i===i-1){valid=true}else if(s.j===j&&s.i===i+1){valid=true}if(valid&&sc.c!==tc.c&&Math.abs(sc.v-tc.v)===1){[board[s.i][s.j],board[i][j]]=[board[i][j],board[s.i][s.j]];score+=20;selected=null;checkWin();render()}else{selected=null;render()}}}
function checkWin(){let all=false;for(let i=0;i<7;i++)for(let j=0;j<board[i].length;j++)if(board[i][j].hidden){all=true;break}if(!all){msgEl.textContent='You Win! Refresh to play again.';score+=1000;render()}}
init();
</script></body></html> [end of text]


