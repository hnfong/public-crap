import java.util.Scanner;

public class SizeCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        String[] parts = input.split(", ");
        double totalBytes = 0;
        double totalK = 0;
        double totalM = 0;
        double totalG = 0;
        for (String part : parts) {
            String[] numberAndSuffix = part.split(" ");
            String numberStr = numberAndSuffix[0].replace(",", "");
            double number = Double.parseDouble(numberStr);
            String suffix = numberAndSuffix.length > 1 ? numberAndSuffix[1].toLowerCase() : "";
            switch (suffix) {
                case "k":
                    totalBytes += number * 1024;
                    totalK += number;
                    break;
                case "m":
                    totalBytes += number * 1024 * 1024;
                    totalM += number;
                    break;
                case "g":
                    totalBytes += number * 1024 * 1024 * 1024;
                    totalG += number;
                    break;
                default:
                    totalBytes += number;
            }
        }
        System.out.println(totalBytes);
        System.out.printf("%.1f K\n", totalK);
        System.out.printf("%.1f M\n", totalM);
        System.out.printf("%.1f G\n", totalG);
    }
}
