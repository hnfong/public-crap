<!DOCTYPE html><html>
<head>
  <title>Poker Game</title>
  <style>
    body { font-family: Arial, sans-serif; text-align: center; }
    .card { display: inline-block; width: 50px; height: 75px; margin: 5px; background: #fff; border: 1px solid #000; border-radius: 5px; }
    .btn { padding: 10px; margin: 10px; cursor: pointer; }
  </style>
</head>
<body>
  <h1>Poker Game</h1>
  <div id="hand"></div>
  <button class="btn" onclick="deal()">Deal</button>
  <button class="btn" onclick="reset()">Reset</button>
  <script>
    const deck = [...'♠♥♦♣'].map(s => [...'AKQJT98765432'].map(r => r + s)).flat();
    const shuffle = arr => { for (let i = arr.length; i; i--) { let j = Math.floor(Math.random() * i); [arr[i - 1], arr[j]] = [arr[j], arr[i - 1]]; } };
    const hand = [];
    const deal = () => {
      if (deck.length < 5) return alert('No cards left!');
      hand.push(...deck.splice(0, 5));
      render();
    };
    const reset = () => {
      shuffle(deck);
      hand.length = 0;
      document.getElementById('hand').innerHTML = '';
    };
    const render = () => {
      const handDiv = document.getElementById('hand');
      handDiv.innerHTML = '';
      hand.forEach(card => {
        const cardDiv = document.createElement('div');
        cardDiv.className = 'card';
        cardDiv.textContent = card;
        handDiv.appendChild(cardDiv);
      });
    };
    shuffle(deck);
  </script>
</body>
</html> [end of text]


