import java.util.Scanner;

public class NumberConverter {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        double totalSum = 0;

        String[] parts = input.split(",\\s*and\\s*");
        for (String part : parts) {
            String[] numberAndSuffix = part.trim().split("[,\\s]+");
            for (String numberAndSuffixPart : numberAndSuffix) {
                double number = parseNumber(numberAndSuffixPart);
                totalSum += number;
            }
        }

        System.out.printf("%.1f\n", totalSum);
        System.out.printf("%.0f K\n", totalSum / 1024);
        System.out.printf("%.0f M\n", totalSum / (1024 * 1024));
        System.out.printf("%.0f G\n", totalSum / (1024 * 1024 * 1024));
    }

    private static double parseNumber(String numberAndSuffix) {
        String number = numberAndSuffix.replaceAll("[kKmMgG]", "").trim();
        double value = Double.parseDouble(number);
        String suffix = numberAndSuffix.substring(number.length()).trim().toUpperCase();

        switch (suffix) {
            case "K":
                return value * 1024;
            case "M":
                return value * 1024 * 1024;
            case "G":
                return value * 1024 * 1024 * 1024;
            default:
                return value;
        }
    }
}
