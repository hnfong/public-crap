import java.util.Scanner;

public class NumberConverter {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.close();

        String[] parts = input.split("[,\\s]+");
        double totalBytes = 0;

        for (String part : parts) {
            part = part.trim();
            if (part.isEmpty()) continue;

            double value = parseNumber(part);
            String suffix = parseSuffix(part);

            double bytes = convertToBytes(value, suffix);
            totalBytes += bytes;
        }

        printResults(totalBytes);
    }

    private static double parseNumber(String part) {
        String[] numberParts = part.split("[a-zA-Z]+");
        return Double.parseDouble(numberParts[0].replace(",", ""));
    }

    private static String parseSuffix(String part) {
        if (part.length() <= 1) return "";
        return part.substring(part.length() - 1).toUpperCase();
    }

    private static double convertToBytes(double value, String suffix) {
        switch (suffix) {
            case "K":
                return value * 1024;
            case "M":
                return value * 1024 * 1024;
            case "G":
                return value * 1024 * 1024 * 1024;
            default:
                return value;
        }
    }

    private static void printResults(double totalBytes) {
        System.out.printf("%.1f%n", totalBytes);
        System.out.printf("%.1f k%n", totalBytes / 1024);
        System.out.printf("%.1f M%n", totalBytes / (1024 * 1024));
        System.out.printf("%.1f G%n", totalBytes / (1024 * 1024 * 1024));
    }
}
