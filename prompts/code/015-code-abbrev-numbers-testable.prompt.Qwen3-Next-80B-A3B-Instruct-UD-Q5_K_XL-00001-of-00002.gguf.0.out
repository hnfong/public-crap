def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        val = round(x / 1000, 1)
        if val >= 100:
            return f"{int(round(x / 1000))}K"
        else:
            return f"{val:.1f}K".replace('.0K', 'K')
    elif x < 1000000000:
        val = round(x / 1000000, 1)
        if val >= 100:
            return f"{int(round(x / 1000000))}M"
        else:
            return f"{val:.1f}M".replace('.0M', 'M')
    else:
        val = round(x / 1000000000, 1)
        if val >= 100:
            return f"{int(round(x / 1000000000))}B"
        else:
            return f"{val:.1f}B".replace('.0B', 'B')
