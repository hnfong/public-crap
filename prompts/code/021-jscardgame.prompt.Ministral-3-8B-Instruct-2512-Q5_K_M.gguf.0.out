<!DOCTYPE html><html><head><title>Card Chaos</title><style>body{font-family:Arial;text-align:center;}canvas{border:1px solid #000;}button{padding:8px;}</style></head><body><canvas id=c width=500 height=500></canvas><button id=b>Shuffle</button><script>
let c=document.getElementById('c'),b=document.getElementById('b'),ctx=c.getContext('2d'),s=[],d=[],w=80,h=120;
for(i=0;i<52;i++)s.push({v:i%13+1,c:i<13?'♥':'♦',x:Math.random()*400+50,y:Math.random()*300+50});
b.onclick=_=>{d=[...s];s=[...d];d.forEach((_,i)=>s[i].x=Math.random()*400+50,s[i].y=Math.random()*300+50);draw()};
c.onmousedown=e=>{let x=e.clientX-c.offsetLeft,y=e.clientY-c.offsetTop;d.forEach((_,i)=>Math.hypot(s[i].x-x,s[i].y-y)<w/2&&(d.splice(i,1),s.forEach((_,j)=>Math.hypot(s[j].x-x,s[j].y-y)<w/2&&(d.push(s[j]),s.splice(j,1))),draw()))};
function draw(){ctx.clearRect(0,0,c.width,c.height);s.forEach(c=>{ctx.fillStyle=c.c;ctx.fillRect(c.x-w/2,c.y-h/2,w,h);ctx.fillStyle='black';ctx.font='16px Arial';ctx.fillText(c.v,c.x-w/2+20,c.y-h/2+20);});d.forEach(c=>{ctx.fillStyle=c.c;ctx.fillRect(c.x-w/2,c.y-h/2,w,h);ctx.fillStyle='black';ctx.font='16px Arial';ctx.fillText(c.v,c.x-w/2+20,c.y-h/2+20);ctx.strokeStyle='black';ctx.strokeRect(c.x-w/2,c.y-h/2,w,h);})}
draw();</script></body></html>
