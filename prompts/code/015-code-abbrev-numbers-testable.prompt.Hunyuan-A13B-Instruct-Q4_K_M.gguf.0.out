def abbrev_num(x):
    if x == 0:
        return "0"
    
    magnitude = 0
    while x >= 1000:
        x /= 1000
        magnitude += 1
    
    if magnitude == 1:
        suffix = "K"
    elif magnitude == 2:
        suffix = "M"
    elif magnitude == 3:
        suffix = "B"
    elif magnitude == 4:
        suffix = "T"
    else:
        return str(x)
    
    # Round to 1 significant digit
    rounded = round(x, -int(len(str(int(x))) - 1))
    
    # Handle cases where rounding causes trailing .0
    if rounded == int(rounded):
        rounded = int(rounded)
    
    # Format the result
    result = f"{rounded}{suffix}"
    
    # Ensure the result is <= 4 characters
    if len(result) > 4:
        # If rounding to 1 significant digit doesn't work, try 2
        if magnitude == 1:
            rounded = round(x, -int(len(str(int(x))) - 2))
            result = f"{rounded}K"
        elif magnitude == 2:
            rounded = round(x, -int(len(str(int(x))) - 2))
            result = f"{rounded}M"
        elif magnitude == 3:
            rounded = round(x, -int(len(str(int(x))) - 2))
            result = f"{rounded}B"
        else:
            return str(x)
    
    return result
