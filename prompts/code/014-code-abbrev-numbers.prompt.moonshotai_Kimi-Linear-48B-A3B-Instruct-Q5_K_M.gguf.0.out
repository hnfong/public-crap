def format_number(num):
    """
    Convert an integer to a compact, human-readable string.
    
    Args:
        num: Integer to format
        
    Returns:
        String representation in compact form
    """
    # Handle negative numbers
    negative = num < 0
    num = abs(num)
    
    # Handle zero
    if num == 0:
        return "0"
    
    # Define suffixes and their thresholds
    suffixes = [
        (1e12, "T"),   # Trillion
        (1e9, "B"),    # Billion
        (1e6, "M"),    # Million
        (1e3, "k"),    # Thousand
    ]
    
    # For numbers less than 1000, return as string
    if num < 1000:
        return str(num)
    
    # Find the appropriate suffix
    for threshold, suffix in suffixes:
        if num < threshold * 1000:  # Less than next threshold
            # Format with 1-2 significant digits
            if num < threshold * 10:
                # Less than 10 * threshold, use 1 decimal place
                formatted = f"{num / threshold:.1f}{suffix}"
            else:
                # 10 * threshold or more, use 2 significant digits
                formatted = f"{num / threshold:.2f}{suffix}"
            
            # Ensure we don't exceed 4 characters
            if len(formatted) > 4:
                # If we have 2 decimal places and it's too long, try 1 decimal place
                if formatted.endswith(".00"):
                    formatted = formatted[:-2] + suffix
                else:
                    formatted = f"{num / threshold:.1f}{suffix}"
            
            return formatted
    
    # If we get here, it's a very large number
    # Use the largest suffix available
    return f"{num / 1e12:.2f}T"

