import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.io.IOException;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class ByteSum {
    private static final Pattern NUMBER_PATTERN = Pattern.compile(
        "([+-]?\\d{1,3}(?:,\\d{3})*(?:\\.\\d+)?|\\d+(?:\\.\\d+)?)\\s*([kKmMgG]?)"
    );

    public static void main(String[] args) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        StringBuilder input = new StringBuilder();
        String line;
        while ((line = reader.readLine()) != null) {
            input.append(line).append("\n");
        }

        double totalBytes = 0.0;

        Matcher matcher = NUMBER_PATTERN.matcher(input.toString());
        while (matcher.find()) {
            String numStr = matcher.group(1).replace(",", "");
            double value = Double.parseDouble(numStr);
            String suffix = matcher.group(2).toUpperCase();

            switch (suffix) {
                case "K":
                    value *= 1024;
                    break;
                case "M":
                    value *= 1024 * 1024;
                    break;
                case "G":
                    value *= 1024 * 1024 * 1024;
                    break;
                default:
                    // No suffix means bytes
                    break;
            }

            totalBytes += value;
        }

        double kBytes = totalBytes / 1024;
        double mBytes = totalBytes / (1024 * 1024);
        double gBytes = totalBytes / (1024.0 * 1024 * 1024);

        System.out.printf("%.1f\n", totalBytes);
        System.out.printf("%.1f k\n", kBytes);
        System.out.printf("%.1f M\n", mBytes);
        System.out.printf("%.1f G\n", gBytes);
    }
}
