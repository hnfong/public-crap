import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class SizeCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        double total = 0;
        Pattern pattern = Pattern.compile("([0-9,]+)([kKmMgG]?)");
        Matcher matcher = pattern.matcher(input);
        while (matcher.find()) {
            double value = Double.parseDouble(matcher.group(1).replaceAll(",", ""));
            String suffix = matcher.group(2);
            switch (suffix.toLowerCase()) {
                case "k":
                    value *= 1024;
                    break;
                case "m":
                    value *= 1024 * 1024;
                    break;
                case "g":
                    value *= 1024 * 1024 * 1024;
                    break;
            }
            total += value;
        }
        System.out.println(total);
        System.out.println(total / 1024 + " K");
        System.out.println(total / (1024 * 1024) + " M");
        System.out.println(total / (1024 * 1024 * 1024) + " G");
    }
}
