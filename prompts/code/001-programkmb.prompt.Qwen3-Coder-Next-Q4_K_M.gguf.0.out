import java.util.*;
import java.util.regex.*;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder inputBuilder = new StringBuilder();
        
        while (scanner.hasNextLine()) {
            inputBuilder.append(scanner.nextLine()).append("\n");
        }
        scanner.close();
        
        String input = inputBuilder.toString();
        double total = 0.0;
        
        // Pattern to match numbers with optional commas and optional suffixes
        Pattern pattern = Pattern.compile("([\\d,]+(?:\\.\\d+)?)\\s*([kKmMgG])?");
        Matcher matcher = pattern.matcher(input);
        
        while (matcher.find()) {
            String numberStr = matcher.group(1).replace(",", "");
            String suffix = matcher.group(2);
            
            double value = Double.parseDouble(numberStr);
            
            if (suffix != null) {
                switch (suffix.toLowerCase()) {
                    case "k":
                        value *= 1024;
                        break;
                    case "m":
                        value *= 1024 * 1024;
                        break;
                    case "g":
                        value *= 1024 * 1024 * 1024;
                        break;
                }
            }
            
            total += value;
        }
        
        // Print the total sum
        System.out.println(String.format("%.1f", total));
        
        // Print in kilobytes
        System.out.println(String.format("%.1f k", total / 1024));
        
        // Print in megabytes
        System.out.println(String.format("%.1f M", total / (1024 * 1024)));
        
        // Print in gigabytes
        System.out.println(String.format("%.1f G", total / (1024 * 1024 * 1024)));
    }
}
