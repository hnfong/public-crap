import java.io.*;
import java.util.*;
import java.util.regex.*;

public class NumberSumConverter {

    private static final Map<String, Double> SUFFIXES = Map.of(
            "k", 1024.0,
            "K", 1024.0,
            "m", 1024.0 * 1024.0,
            "M", 1024.0 * 1024.0,
            "g", 1024.0 * 1024.0 * 1024.0,
            "G", 1024.0 * 1024.0 * 1024.0
    );

    public static void main(String[] args) throws IOException {
        BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
        StringBuilder sb = new StringBuilder();
        String line;
        while ((line = reader.readLine()) != null) {
            sb.append(line);
        }
        String input = sb.toString();

        // Remove all non-digit, non-dot, non-comma, non-space, non-suffix characters except whitespace
        // But we want to keep spaces and commas for splitting, so we'll extract numbers with regex
        Pattern numberPattern = Pattern.compile(
                "\\b(\\d{1,3}(?:,\\d{3})*(?:\\.\\d+)?)([kKmMgG]?)(?=[\\s.,;:!?)\\\"]|$)"
        );
        Matcher matcher = numberPattern.matcher(input);
        double total = 0.0;

        while (matcher.find()) {
            String numStr = matcher.group(1);
            String suffix = matcher.group(2);

            // Remove commas from number string
            numStr = numStr.replace(',', '.');
            double value = Double.parseDouble(numStr);

            if (suffix != null && suffix.length() > 0) {
                value *= SUFFIXES.get(suffix.toUpperCase());
            }
            total += value;
        }

        double kTotal = total / 1024.0;
        double mTotal = total / (1024.0 * 1024.0);
        double gTotal = total / (1024.0 * 1024.0 * 1024.0);

        System.out.printf("%.1f%n", total);
        System.out.printf("%.1f k%n", kTotal);
        System.out.printf("%.1f M%n", mTotal);
        System.out.printf("%.1f G%n", gTotal);
    }
}
