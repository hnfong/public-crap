def abbrev_num(x):
    if x < 1000:
        return str(x)
    
    suffixes = ['', 'K', 'M', 'B', 'T']
    magnitude = 0
    num = float(x)
    
    while num >= 1000 and magnitude < len(suffixes) - 1:
        magnitude += 1
        num /= 1000.0
        
    # Determine the format to keep length <= 4
    # Format options: "1", "12", "123", "1.2", "12.3"
    # With suffix: "1K", "12K", "123K", "1.2K", "12.3K"
    
    # If the number is >= 100, we can't use decimals because "100K" is 4 chars, "100.0K" is too long.
    # If the number is < 10, we can use 1 decimal place (e.g., 9.4M -> 4 chars).
    # If the number is between 10 and 99, we can use 1 decimal place (e.g., 12.3M -> 5 chars - too long).
    # Wait, let's re-verify the length constraint.
    # "1.2K" is 4 chars. "12.3K" is 5 chars.
    # So if num >= 10, we must round to integer.
    # If num < 10, we can use 1 decimal place.
    
    if num >= 10:
        # Round to nearest integer
        rounded_num = int(round(num))
        return f"{rounded_num}{suffixes[magnitude]}"
    else:
        # Use 1 decimal place
        rounded_num = round(num, 1)
        # Handle case like 9.96 -> 10.0, which should be 10
        if rounded_num >= 10:
            return f"10{suffixes[magnitude]}"
        return f"{rounded_num}{suffixes[magnitude]}"
