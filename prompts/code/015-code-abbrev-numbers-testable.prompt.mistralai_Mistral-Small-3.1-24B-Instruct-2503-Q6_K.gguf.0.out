def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        return f"{round(x / 1000):.0f}K" if round(x / 1000) < 10 else f"{round(x / 1000, 1):.1f}K"
    elif x < 1000000000:
        return f"{round(x / 1000000):.0f}M" if round(x / 1000000) < 10 else f"{round(x / 1000000, 1):.1f}M"
    else:
        return f"{round(x / 1000000000):.0f}B" if round(x / 1000000000) < 10 else f"{round(x / 1000000000, 1):.1f}B"
