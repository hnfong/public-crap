import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.close();

        Pattern pattern = Pattern.compile("\\d{1,3}(?:,\\d{3})*(?:\\.\\d+)?(?:[kKmMgG]?)?");
        Matcher matcher = pattern.matcher(input);
        double sum = 0;
        while (matcher.find()) {
            String match = matcher.group();
            String value = match.replaceAll("[^\\d.]", "");
            String suffix = match.replaceAll("\\d.*", "");
            double baseValue = Double.parseDouble(value.replace(",", ""));
            double multiplier = 1;
            if (suffix.equalsIgnoreCase("k")) {
                multiplier = 1024;
            } else if (suffix.equalsIgnoreCase("m")) {
                multiplier = 1024 * 1024;
            } else if (suffix.equalsIgnoreCase("g")) {
                multiplier = 1024 * 1024 * 1024;
            }
            sum += baseValue * multiplier;
        }
        System.out.printf("%.1f%n", sum);
        System.out.printf("%.1f K%n", sum / 1024);
        System.out.printf("%.1f M%n", sum / (1024 * 1024));
        System.out.printf("%.1f G%n", sum / (1024 * 1024 * 1024));
    }
}
