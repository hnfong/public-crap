<!DOCTYPE html><html><head><style>body{font-family:sans-serif}#board{display:grid;grid-template-columns:repeat(7,50px);grid-gap:5px}div{width:50px;height:70px;border:1px solid #ccc;display:flex;align-items:center;justify-content:center;cursor:pointer}div:hover{background:#eee}</style></head><body><div id="board"></div><script>let deck=[],board=[],moves=0;function shuffle(a){for(let i=a.length-1;i>0;i--){const j=Math.floor(Math.random()*(i+1));[a[i],a[j]]=[a[j],a[i)]}return a}function deal(){deck=shuffle([...Array(52).keys()]);board=[...Array(7)].map((_,i)=>deck.slice(i*7,i*7+7).reverse());render()}function render(){const boardEl=document.getElementById('board');boardEl.innerHTML='';board.forEach((row,i)=>row.forEach((card,j)=>{const el=document.createElement('div');el.textContent=(card%13)+1;el.onclick=()=>move(i,j);boardEl.appendChild(el)}))}function move(fromRow,fromCol){const card=board[fromRow][fromCol];if(!card)return;for(let toRow=0;toRow<board.length;toRow++){const toCol=board[toRow].length;if(toCol===0||board[toRow][toCol-1]%13===card%13+1){board[fromRow].splice(fromCol,1);board[toRow].push(card);moves++;render();return}}alert('Invalid move!')}deal()</script></body></html> [end of text]


