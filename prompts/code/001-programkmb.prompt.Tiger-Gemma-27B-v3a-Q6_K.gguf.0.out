import java.util.regex.Matcher;
import java.util.regex.Pattern;
import java.util.Scanner;

public class NumberSum {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder input = new StringBuilder();
        while (scanner.hasNextLine()) {
            input.append(scanner.nextLine()).append(" ");
        }
        String text = input.toString();

        Pattern pattern = Pattern.compile("(\\d+(?:,\\d+)*)(?:\\s*([kKmMgG]))?");
        Matcher matcher = pattern.matcher(text);
        double totalSum = 0;

        while (matcher.find()) {
            String numberStr = matcher.group(1).replace(",", "");
            String suffix = matcher.group(2);

            double number = Double.parseDouble(numberStr);
            double multiplier = 1;

            if (suffix != null) {
                suffix = suffix.toLowerCase();
                switch (suffix) {
                    case "k":
                        multiplier = 1024;
                        break;
                    case "m":
                        multiplier = 1024 * 1024;
                        break;
                    case "g":
                        multiplier = 1024 * 1024 * 1024;
                        break;
                }
            }

            totalSum += number * multiplier;
        }

        System.out.printf("%.1f\n", totalSum);
        System.out.printf("%.1f k\n", totalSum / 1024);
        System.out.printf("%.1f M\n", totalSum / (1024 * 1024));
        System.out.printf("%.1f G\n", totalSum / (1024 * 1024 * 1024));
    }
}
