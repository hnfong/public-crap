def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        return str(round(x / 1000)) + "K"
    elif x < 1000000000:
        return str(round(x / 1000000)) + "M"
    elif x < 1000000000000:
        return str(round(x / 1000000000)) + "B"
    else:
        return str(round(x / 1000000000000)) + "T"
