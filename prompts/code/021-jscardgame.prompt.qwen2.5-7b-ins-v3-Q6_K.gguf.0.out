<!DOCTYPE html>
<html>
<head>
    <title>Twisted Solitaire</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; margin: 0; padding: 0; background: #f0f0f0; }
        #game { width: 600px; margin: 50px auto; }
        .card { width: 80px; height: 110px; background: url('card_back.png') no-repeat center; margin: 5px; }
        .card.flipped { background: url('card_front.png') no-repeat center; }
        .hand, .pile { display: flex; flex-wrap: wrap; }
        .hand .card { margin-right: 10px; }
        .controls { margin-top: 20px; }
        button { padding: 10px 20px; margin: 5px; }
    </style>
</head>
<body>
    <div id="game">
        <div id="hand" class="hand"></div>
        <div id="pile" class="pile"></div>
        <div class="controls">
            <button id="shuffle">Shuffle</button>
            <button id="reset">Reset</button>
        </div>
    </div>
    <script>
        const hand = document.getElementById('hand');
        const pile = document.getElementById('pile');
        const shuffleBtn = document.getElementById('shuffle');
        const resetBtn = document.getElementById('reset');

        let deck = [];
        let handCards = [];
        let pileCards = [];
        let selectedCard = null;

        // Initialize deck
        for (let suit = 0; suit < 4; suit++) {
            for (let rank = 1; rank <= 13; rank++) {
                deck.push({ suit, rank });
            }
        }

        // Shuffle function
        function shuffle() {
            for (let i = deck.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [deck[i], deck[j]] = [deck[j], deck[i]];
            }
            deal();
        }

        // Deal cards
        function deal() {
            handCards = deck.slice(0, 7);
            pileCards = deck.slice(7);
            handCards.forEach(card => {
                const div = document.createElement('div');
                div.classList.add('card');
                div.dataset.id = card.rank;
                div.addEventListener('click', flipCard);
                hand.appendChild(div);
            });
            pile.appendChild(document.createElement('div'));
            shuffleBtn.disabled = true;
            resetBtn.disabled = false;
        }

        // Flip card
        function flipCard() {
            if (selectedCard) return;
            const card = this;
            card.classList.add('flipped');
            selectedCard = card;
        }

        // Reset game
        function reset() {
            hand.innerHTML = '';
            pile.innerHTML = '';
            shuffleBtn.disabled = false;
            resetBtn.disabled = true;
            shuffle();
        }

        shuffleBtn.addEventListener('click', shuffle);
        resetBtn.addEventListener('click', reset);

        // Start game
        shuffle();
    </script>
</body>
</html>
