<!DOCTYPE html><html>
<head>
    <title>Poker Game</title>
</head>
<body>
    <h1>Poker Game</h1>
    <button onclick="startGame()">Start Game</button>
    <div id="output"></div>
    <script>
        function startGame() {
            let deck = ['Ace', '2', '3', '4', '5', '6', '7', '8', '9', '10', 'Jack', 'Queen', 'King'];
            let playerHand = [];
            let computerHand = [];
            let playerScore = 0;
            let computerScore = 0;

            for (let i = 0; i < 5; i++) {
                let randomIndex = Math.floor(Math.random() * deck.length);
                playerHand.push(deck[randomIndex]);
                deck.splice(randomIndex, 1);
            }

            for (let i = 0; i < 5; i++) {
                let randomIndex = Math.floor(Math.random() * deck.length);
                computerHand.push(deck[randomIndex]);
                deck.splice(randomIndex, 1);
            }

            playerScore = calculateScore(playerHand);
            computerScore = calculateScore(computerHand);

            document.getElementById('output').innerHTML = `
                <h2>Player Hand:</h2>
                <ul>
                    ${playerHand.map(card => `<li>${card}</li>`).join('')}
                </ul>
                <h2>Computer Hand:</h2>
                <ul>
                    ${computerHand.map(card => `<li>${card}</li>`).join('')}
                </ul>
                <h2>Player Score: ${playerScore}</h2>
                <h2>Computer Score: ${computerScore}</h2>
            `;
        }

        function calculateScore(hand) {
            let score = 0;
            for (let card of hand) {
                if (card === 'Ace') {
                    score += 1;
                } else if (card === 'Jack' || card === 'Queen' || card === 'King') {
                    score += 10;
                } else {
                    score += parseInt(card);
                }
            }
            return score;
        }
    </script>
</body>
</html>
