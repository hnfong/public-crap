import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class SumNumbers {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder inputBuilder = new StringBuilder();
        
        // Read all input from standard input
        while (scanner.hasNextLine()) {
            inputBuilder.append(scanner.nextLine()).append("\n");
        }
        scanner.close();
        
        String input = inputBuilder.toString();
        
        // Pattern to match numbers with optional commas and optional suffix
        // Matches: digits, optional commas, optional decimal part, optional suffix (k, K, m, M, g, G)
        Pattern pattern = Pattern.compile(
            "(\\d+(?:,\\d{3})*(?:\\.\\d+)?)\\s*([kKmMgG])?"
        );
        
        Matcher matcher = pattern.matcher(input);
        double totalSum = 0.0;
        
        while (matcher.find()) {
            String numberPart = matcher.group(1);
            String suffix = matcher.group(2);
            
            // Remove commas from the number part
            String cleanNumber = numberPart.replace(",", "");
            
            try {
                double value = Double.parseDouble(cleanNumber);
                
                // Apply multiplier based on suffix
                if (suffix != null) {
                    char lowerSuffix = Character.toLowerCase(suffix.charAt(0));
                    switch (lowerSuffix) {
                        case 'k':
                            value *= 1024;
                            break;
                        case 'm':
                            value *= 1024 * 1024;
                            break;
                        case 'g':
                            value *= 1024 * 1024 * 1024;
                            break;
                    }
                }
                
                totalSum += value;
            } catch (NumberFormatException e) {
                // Skip invalid numbers
            }
        }
        
        // Print results
        System.out.printf("%.1f%n", totalSum);
        System.out.printf("%.1f k%n", totalSum / 1024.0);
        System.out.printf("%.1f M%n", totalSum / (1024.0 * 1024.0));
        System.out.printf("%.1f G%n", totalSum / (1024.0 * 1024.0 * 1024.0));
    }
}
