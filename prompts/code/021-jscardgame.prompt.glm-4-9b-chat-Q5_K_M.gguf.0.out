<!DOCTYPE html>
<html>
<head>
    <title>Memory Match Game</title>
    <style>
        .card { width: 100px; height: 100px; margin: 5px; display: inline-block; background-color: #f0f0f0; text-align: center; line-height: 100px; font-size: 24px; cursor: pointer; }
        .hidden { background-color: #ddd; }
        .matched { background-color: #c8e6c9; }
    </style>
</head>
<body>
    <div id="game"></div>
    <script>
        const cards = ['A', 'B', 'C', 'D', 'E', 'F', 'G', 'H', 'A', 'B', 'C', 'D', 'E', 'F', 'G', 'H'];
        let cardElements = [];
        let cardValues = [];
        let flippedCard = null;
        let firstCardValue = null;
        let secondCardValue = null;

        function createGame() {
            const gameDiv = document.getElementById('game');
            gameDiv.style.display = 'flex';
            gameDiv.style.flexWrap = 'wrap';
            gameDiv.style.justifyContent = 'center';

            for (let i = 0; i < cards.length; i++) {
                const cardDiv = document.createElement('div');
                cardDiv.className = 'card hidden';
                cardDiv.textContent = cards[i];
                cardDiv.dataset.value = cards[i];
                gameDiv.appendChild(cardDiv);
                cardElements.push(cardDiv);
            }

            shuffleCards();
        }

        function shuffleCards() {
            cardElements = cardElements.sort(() => Math.random() - 0.5);
            cardElements.forEach(card => {
                card.classList.remove('matched');
                card.classList.add('hidden');
                card.addEventListener('click', flipCard);
            });
        }

        function flipCard() {
            if (this.classList.contains('matched') || flippedCard) return;
            this.classList.remove('hidden');
            flippedCard = this;
            firstCardValue = this.dataset.value;

            if (cardValues.includes(firstCardValue)) {
                secondCardValue = cardValues[cardValues.indexOf(firstCardValue) + 1];
                if (secondCardValue) {
                    setTimeout(() => {
                        flippedCard.classList.add('matched');
                        flippedCard.nextElementSibling.classList.add('matched');
                        flippedCard.nextElementSibling.classList.remove('hidden');
                        flippedCard = null;
                        firstCardValue = null;
                        secondCardValue = null;
                    }, 1000);
                }
            }
        }

        createGame();
    </script>
</body>
</html>
