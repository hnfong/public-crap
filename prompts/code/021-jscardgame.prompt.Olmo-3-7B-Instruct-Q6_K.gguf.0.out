<!DOCTYPE html><html><body><canvas id="c" width=640 height=480></canvas><script>const c=document.getElementById('c'),ctx=c.getContext('2d');let t=0,s=0;function draw(){ctx.clearRect(0,0,c.width,c.height);ctx.fillStyle='white';ctx.fillRect(s,0,640,s);for(let i=0;i<7;i++){let x=(s+64*i)%640,y=40*i;ctx.fillStyle=i%3?'#000':'#f00';ctx.fillRect(x,y,50,20)}if(t<1000){let x=(s+Math.floor(t/50))*64%640,y=40*Math.floor(t/50);ctx.fillStyle=0;ctx.fillRect(x,y,50,20);t+=1}requestAnimationFrame(draw)}draw()</script></body></html> [end of text]


