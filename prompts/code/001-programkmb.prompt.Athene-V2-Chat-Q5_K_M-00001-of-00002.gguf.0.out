import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class NumberSumCalculator {

    private static final Pattern NUMBER_PATTERN = Pattern.compile("(\\d{1,3}(,\\d{3})*|\\d+(\\.\\d+)?)\\s*([kKmMgG]?)");

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder input = new StringBuilder();
        while (scanner.hasNextLine()) {
            input.append(scanner.nextLine()).append(" ");
        }
        scanner.close();

        long totalSum = 0;
        Matcher matcher = NUMBER_PATTERN.matcher(input.toString());
        while (matcher.find()) {
            String numberStr = matcher.group(1).replace(",", "");
            String suffix = matcher.group(4);
            double number = Double.parseDouble(numberStr);
            switch (suffix.toLowerCase()) {
                case "k":
                    number *= 1024;
                    break;
                case "m":
                    number *= 1024 * 1024;
                    break;
                case "g":
                    number *= 1024 * 1024 * 1024;
                    break;
            }
            totalSum += (long) number;
        }

        System.out.printf("%.1f%n", totalSum);
        System.out.printf("%.1f K%n", totalSum / 1024.0);
        System.out.printf("%.1f M%n", totalSum / (1024.0 * 1024.0));
        System.out.printf("%.1f G%n", totalSum / (1024.0 * 1024.0 * 1024.0));
    }
}
