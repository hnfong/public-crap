def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 10000:
        return f"{x/1000:.1f}K"
    elif x < 100000:
        return f"{round(x/1000)}K"
    elif x < 1000000:
        return f"{x/1000:.0f}K"
    elif x < 10000000:
        return f"{x/1000000:.1f}M"
    elif x < 100000000:
        return f"{round(x/1000000)}M"
    else:
        return f"{x/1000000:.0f}M"
