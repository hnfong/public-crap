  const freqs=Object.values(counts).sort((a,b)=>b-a)
  const flush=suits.every(s=>s===suits[0])
  const straight=values[4]-values[0]===4&&new Set(values).size===5
  const straightAceLow=values.join()==='2,3,4,5,14'
  
  let result='High card'
  if(flush&&straight&&values[0]===10)result='Royal flush'
  else if(flush&&straight)result='Straight flush'
  else if(freqs[0]===4)result='Four of a kind'
  else if(freqs[0]===3&&freqs[1]===2)result='Full house'
  else if(flush)result='Flush'
  else if(straight||straightAceLow)result='Straight'
  else if(freqs[0]===3)result='Three of a kind'
  else if(freqs[0]===2&&freqs[1]===2)result='Two pair'
  else if(freqs[0]===2)result='One pair'
  
  document.getElementById('result').textContent='Result: '+result
}
