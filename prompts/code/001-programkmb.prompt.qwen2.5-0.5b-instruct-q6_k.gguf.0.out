import java.util.Scanner;

public class NumberSum {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        String[] numbers = input.split(", ");
        double sum = 0;
        double kilobytes = 0;
        double megabytes = 0;
        double gigabytes = 0;

        for (String number : numbers) {
            String[] parts = number.split(" ");
            double numberValue = Double.parseDouble(parts[0]);
            String suffix = parts[1];

            if (suffix.equals("k")) {
                sum += numberValue * 1024;
                kilobytes += numberValue * 1024;
            } else if (suffix.equals("K")) {
                sum += numberValue * 1024 * 1024;
                kilobytes += numberValue * 1024 * 1024;
            } else if (suffix.equals("m")) {
                sum += numberValue * 1024 * 1024 * 1024;
                kilobytes += numberValue * 1024 * 1024 * 1024;
                megabytes += numberValue * 1024 * 1024 * 1024;
            } else if (suffix.equals("M")) {
                sum += numberValue * 1024 * 1024 * 1024 * 1024;
                kilobytes += numberValue * 1024 * 1024 * 1024 * 1024;
                megabytes += numberValue * 1024 * 1024 * 1024 * 1024;
            } else if (suffix.equals("g")) {
                sum += numberValue * 1024 * 1024 * 1024 * 1024 * 1024;
                kilobytes += numberValue * 1024 * 1024 * 1024 * 1024 * 1024;
                megabytes += numberValue * 1024 * 1024 * 1024 * 1024 * 1024;
                gigabytes += numberValue * 1024 * 1024 * 1024 * 1024 * 1024;
            } else {
                System.out.println("Invalid suffix");
                return;
            }
        }

        System.out.println(sum);
        System.out.println(kilobytes);
        System.out.println(megabytes);
        System.out.println(gigabytes);
    }
}
