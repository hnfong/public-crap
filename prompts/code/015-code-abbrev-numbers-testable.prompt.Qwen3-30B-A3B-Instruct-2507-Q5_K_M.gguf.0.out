def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        return f"{x/1000:.1f}K".rstrip('0').rstrip('.')
    elif x < 1000000000:
        return f"{x/1000000:.1f}M".rstrip('0').rstrip('.')
    else:
        return f"{x/1000000000:.1f}B".rstrip('0').rstrip('.')
