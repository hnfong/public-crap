def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        return f"{round(x / 1000, 1)}K" if len(f"{round(x / 1000, 1)}K") <= 4 else f"{round(x / 1000)}K"
    elif x < 1000000000:
        return f"{round(x / 1000000, 1)}M" if len(f"{round(x / 1000000, 1)}M") <= 4 else f"{round(x / 1000000)}M"
    else:
        return f"{round(x / 1000000000, 1)}G" if len(f"{round(x / 1000000000, 1)}G") <= 4 else f"{round(x / 1000000000)}G"
