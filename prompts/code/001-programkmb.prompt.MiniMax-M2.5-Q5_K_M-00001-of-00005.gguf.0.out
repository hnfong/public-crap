import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class Main {
    private static final long KILO = 1024L;
    private static final long MEGA = KILO * 1024;
    private static final long GIGA = MEGA * 1024;

    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        StringBuilder sb = new StringBuilder();
        String line;
        while ((line = br.readLine()) != null) {
            sb.append(line).append('\n');
        }
        String input = sb.toString();

        // Pattern matches numbers possibly with commas, optionally followed by suffix
        // Supports: digits with optional decimal point, optional commas, optional suffix
        // Suffix: k, K, m, M, g, G
        Pattern p = Pattern.compile("([0-9]+(?:[0-9,]*[0-9])?(?:\\.[0-9]+)?)\\s*([kKmMgG])?");
        Matcher m = p.matcher(input);

        double totalBytes = 0.0;

        while (m.find()) {
            String numberPart = m.group(1);
            String suffix = m.group(2);

            // Remove commas
            String cleaned = numberPart.replace(",", "");
            double value = Double.parseDouble(cleaned);

            long multiplier = 1;
            if (suffix != null) {
                char s = suffix.charAt(0);
                if (s == 'k' || s == 'K') {
                    multiplier = KILO;
                } else if (s == 'm' || s == 'M') {
                    multiplier = MEGA;
                } else if (s == 'g' || s == 'G') {
                    multiplier = GIGA;
                }
            }

            totalBytes += value * multiplier;
        }

        double kilobytes = totalBytes / KILO;
        double megabytes = totalBytes / MEGA;
        double gigabytes = totalBytes / GIGA;

        System.out.printf("%.1f%n", totalBytes);
        System.out.printf("%.1f k%n", kilobytes);
        System.out.printf("%.1f M%n", megabytes);
        System.out.printf("%.1f G%n", gigabytes);
    }
}
