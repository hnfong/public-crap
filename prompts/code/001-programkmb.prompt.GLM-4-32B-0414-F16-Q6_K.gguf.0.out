import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class NumberSuffixSum {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.close();

        Pattern pattern = Pattern.compile("([0-9,]+\\.?[0-9]*)[kKmMgG]");
        Matcher matcher = pattern.matcher(input);
        double totalSum = 0.0;

        while (matcher.find()) {
            String numberStr = matcher.group(1).replace(",", "");
            double number = Double.parseDouble(numberStr);
            char suffix = matcher.group().charAt(matcher.group().length() - 1);
            double value = convertToBase(number, suffix);
            totalSum += value;
        }

        System.out.println(totalSum);
        System.out.println(totalSum / 1024 + " K");
        System.out.println(totalSum / (1024 * 1024) + " M");
        System.out.println(totalSum / (1024 * 1024 * 1024) + " G");
    }

    private static double convertToBase(double number, char suffix) {
        switch (Character.toLowerCase(suffix)) {
            case 'k':
                return number * 1024;
            case 'm':
                return number * 1024 * 1024;
            case 'g':
                return number * 1024 * 1024 * 1024;
            default:
                return number;
        }
    }
}
