def abbrev_num(x):
    if x < 1000:
        return str(int(round(x)))
    elif x < 1000000:
        val = round(x / 1000)
        if val < 10:
            val = round(x / 100)
            return f"{int(val // 10)}.{int(val % 10)}K"
        else:
            return f"{int(val)}K"
    elif x < 1000000000:
        val = round(x / 1000000)
        if val < 10:
            val = round(x / 100000)
            return f"{int(val // 10)}.{int(val % 10)}M"
        else:
            return f"{int(val)}M"
    else:
        val = round(x / 1000000000)
        if val < 10:
            val = round(x / 100000000)
            return f"{int(val // 10)}.{int(val % 10)}B"
        else:
            return f"{int(val)}B"
