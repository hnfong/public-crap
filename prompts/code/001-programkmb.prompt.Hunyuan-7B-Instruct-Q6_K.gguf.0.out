import java.util.*;
import java.text.DecimalFormat;

public class NumberSum {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.nextLine(); // Consume the newline after the first line

        String[] parts = input.split(" and ");
        double sum = 0.0;

        for (String part : parts) {
            String trimmedPart = part.trim();
            String[] tokens = trimmedPart.split("\\s*,\\s*");

            for (String token : tokens) {
                String numberStr = token.replaceAll("[^0-9.]", "");
                String suffix = "";

                if (numberStr.length() > 0 && (numberStr.charAt(numberStr.length() - 1).toUpperCase() == 'G' ||
                        numberStr.charAt(numberStr.length() - 1).toUpperCase() == 'g')) {
                    suffix = "G";
                    numberStr = numberStr.substring(0, numberStr.length() - 1);
                } else if (numberStr.charAt(numberStr.length() - 1).toUpperCase() == 'M' ||
                        numberStr.charAt(numberStr.length() - 1).toUpperCase() == 'm') {
                    suffix = "M";
                    numberStr = numberStr.substring(0, numberStr.length() - 1);
                } else if (numberStr.charAt(numberStr.length() - 1).toUpperCase() == 'K' ||
                        numberStr.charAt(numberStr.length() - 1).toUpperCase() == 'k') {
                    suffix = "K";
                    numberStr = numberStr.substring(0, numberStr.length() - 1);
                }

                double value = Double.parseDouble(numberStr);
                double multiplier = 1;

                if (!suffix.isEmpty()) {
                    switch (suffix.toUpperCase()) {
                        case "G":
                            multiplier = 1024 * 1024 * 1024;
                            break;
                        case "M":
                            multiplier = 1024 * 1024;
                            break;
                        case "K":
                            multiplier = 1024;
                            break;
                    }
                }

                sum += value * multiplier;
            }
        }

        DecimalFormat df = new DecimalFormat("#.0");
        System.out.println(df.format(sum));
        System.out.println(df.format(sum / 1024) + " k");
        System.out.println(df.format(sum / (1024 * 1024)) + " M");
        System.out.println(df.format(sum / (1024 * 1024 * 1024)) + " G");
    }
}
