import java.util.Scanner;
import java.text.DecimalFormat;
import java.text.NumberFormat;
import java.math.BigDecimal;

public class NumberSuffixSum {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        BigDecimal totalSum = new BigDecimal("0");
        
        while (scanner.hasNext()) {
            String token = scanner.next();
            if (token.matches("[-+]?\\d*\\.?\\d+([kKmMgG])?")) {
                token = token.replace(",", "");
                BigDecimal number = new BigDecimal(token.replaceAll("[kKmMgG]", ""));
                String suffix = token.replaceAll("[\\d.,-+]+", "");
                switch (suffix) {
                    case "k" :
                    case "K" :
                        number = number.multiply(new BigDecimal("1024"));
                        break;
                    case "m" :
                    case "M" :
                        number = number.multiply(new BigDecimal("1024").pow(2));
                        break;
                    case "g" :
                    case "G" :
                        number = number.multiply(new BigDecimal("1024").pow(3));
                        break;
                }
                totalSum = totalSum.add(number);
            }
        }
        
        NumberFormat formatter = NumberFormat.getInstance();
        formatter.setMaximumFractionDigits(1);
        DecimalFormat df = new DecimalFormat("0.0");
        
        System.out.println(formatter.format(totalSum));
        System.out.println(df.format(totalSum.divide(new BigDecimal("1024"))) + " K");
        System.out.println(df.format(totalSum.divide(new BigDecimal("1024").pow(2))) + " M");
        System.out.println(df.format(totalSum.divide(new BigDecimal("1024").pow(3))) + " G");
    }
}
