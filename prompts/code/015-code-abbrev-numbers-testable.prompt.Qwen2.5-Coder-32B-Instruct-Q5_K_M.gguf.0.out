def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 10000:
        return f"{round(x / 1000)}K"
    elif x < 100000:
        return f"{round(x / 10000) / 10}K"
    elif x < 1000000:
        return f"{round(x / 100000)}0K"
    elif x < 10000000:
        return f"{round(x / 1000000)}M"
    elif x < 100000000:
        return f"{round(x / 10000000) / 10}M"
    elif x < 1000000000:
        return f"{round(x / 100000000)}0M"
    elif x < 10000000000:
        return f"{round(x / 1000000000)}B"
    elif x < 100000000000:
        return f"{round(x / 10000000000) / 10}B"
    elif x < 1000000000000:
        return f"{round(x / 100000000000)}0B"
    else:
        return f"{round(x / 1000000000000)}T"
