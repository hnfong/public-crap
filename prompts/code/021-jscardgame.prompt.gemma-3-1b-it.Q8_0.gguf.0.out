<body>

<h1>Solitaire Variant</h1>

<div id="gameBoard"></div>

<div id="deck">
  <div class="card"></div>
  <div class="card"></div>
  <div class="card"></div>
  <div class="card"></div>
  <div class="card"></div>
</div>

<div id="cards">
  <ul id="cardsList"></ul>
</div>

<script>
  let cards = [];
  let deck = [];
  let player1 = true;
  let player2 = true;

  function createDeck() {
    deck = [];
    for (let i = 0; i < 5; i++) {
      deck.push({
        number: i + 1,
        suit: 'Hearts',
        rank: '2'
      });
    }
  }

  function shuffleDeck() {
    for (let i = deck.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [deck[i], deck[j]] = [deck[j], deck[i]];
    }
  }

  function dealCard() {
    if (player1) {
      const index = Math.floor(Math.random() * deck.length);
      deck.splice(index, 1);
    } else {
      const index = Math.floor(Math.random() * deck.length);
      deck.splice(index, 1);
    }

    if (deck.length > 0) {
      const card = deck.shift();
      cards.push(card);
    }
  }

  function displayCards() {
    const cardsList = document.getElementById('cardsList');
    cards.forEach(card => {
      const listItem = document.createElement('li');
      listItem.textContent = card.number;
      cardsList.appendChild(listItem);
    });
  }

  function checkWin() {
    if (player1) {
      if (cards.length === 1) {
        console.log("Player 1 wins!");
        return;
      }
      if (cards.length === 2) {
        console.log("Player 1 wins!");
        return;
      }
      if (cards.length === 3) {
        console.log("Player 1 wins!");
        return;
      }
      if (cards.length === 4) {
        console.log("Player 1 wins!");
        return;
      }
      console.log("Player 1 wins!");
    } else {
      if (cards.length === 1) {
        console.log("Player 2 wins!");
        return;
      }
      if (cards.length === 2) {
        console.log("Player 2 wins!");
        return;
      }
      if (cards.length === 3) {
        console.log("Player 2 wins!");
        return;
      }
      console.log("Player 2 wins!");
    }
  }

  function gameLoop() {
    if (player1) {
      dealCard();
      displayCards();
      if (cards.length === 1) {
        checkWin();
      } else if (cards.length === 2) {
        checkWin();
      } else if (cards.length === 3) {
        checkWin();
      } else if (cards.length === 4) {
        checkWin();
      }
    } else {
      dealCard();
      displayCards();
      if (cards.length === 1) {
        checkWin();
      } else if (cards.length === 2) {
        checkWin();
      } else if (cards.length === 3) {
        checkWin();
      } else if (cards.length === 4) {
        checkWin();
      }
    }
  }

  function startGame() {
    if (player1) {
      console.log("Welcome to Solitaire!");
      displayCards();
      gameLoop();
    } else {
      console.log("Welcome to Solitaire!");
      displayCards();
      gameLoop();
    }
  }

  createDeck();
  shuffleDeck();
  startGame();
</script>

</body>
