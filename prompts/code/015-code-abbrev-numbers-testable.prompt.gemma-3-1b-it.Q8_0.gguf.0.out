def abbrev_num(x):
    """
    Takes an integer and returns a string that roughly represents the number in compact, human readable form.
    """
    num_str = str(x)
    if len(num_str) <= 4:
        return num_str
    else:
        integer_part = int(num_str[:4])
        remainder = num_str[4:]
        if remainder:
            integer_part = int(remainder)
        return f"{integer_part}K"
