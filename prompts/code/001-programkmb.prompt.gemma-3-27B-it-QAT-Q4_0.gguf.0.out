import java.util.regex.Matcher;
import java.util.regex.Pattern;
import java.util.Scanner;

public class NumberSum {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        scanner.close();

        double totalSum = 0.0;
        Pattern pattern = Pattern.compile("(\\d+(?:,\\d+)*)(?:[kKmMgG])?");
        Matcher matcher = pattern.matcher(input);

        while (matcher.find()) {
            String numberStr = matcher.group(1);
            String suffix = matcher.group().substring(numberStr.length());

            double number = parseNumber(numberStr);

            double multiplier = 1.0;
            switch (suffix.toLowerCase()) {
                case "k":
                    multiplier = 1024.0;
                    break;
                case "m":
                    multiplier = 1024.0 * 1024.0;
                    break;
                case "g":
                    multiplier = 1024.0 * 1024.0 * 1024.0;
                    break;
            }

            totalSum += number * multiplier;
        }

        System.out.println(totalSum);
        System.out.println(totalSum / 1024.0 + " K");
        System.out.println(totalSum / (1024.0 * 1024.0) + " M");
        System.out.println(totalSum / (1024.0 * 1024.0 * 1024.0) + " G");
    }

    private static double parseNumber(String numberStr) {
        numberStr = numberStr.replace(",", "");
        return Double.parseDouble(numberStr);
    }
}
