<!DOCTYPE html><html><body><style>#g{position:relative;width:400px;height:400px;border:1px solid black;overflow:hidden}</style><div id="g"><div id="c"></div><div id="p"></div></div><script>let g=document.getElementById('g'),c=document.getElementById('c'),p=document.getElementById('p'),s=0;function r(){c.style.left=Math.random()*400+'px';c.style.top=Math.random()*400+'px';c.style.width=c.style.height=Math.random()*100+'px';c.style.backgroundColor=`rgb(${Math.random()*256},${Math.random()*256},${Math.random()*256})`;p.style.left=p.style.top='0';p.style.width=p.style.height='100%';p.style.backgroundColor='transparent';s++}setInterval(r,1000);function m(){let e=g.offsetWidth-c.offsetWidth,t=g.offsetHeight-c.offsetHeight;c.style.left=Math.max(0,Math.min(e,parseFloat(c.style.left)+(Math.random()*2-1)*10))+'px';c.style.top=Math.max(0,Math.min(t,parseFloat(c.style.top)+(Math.random()*2-1)*10))+'px'}setInterval(m,100);</script></body>
