<!DOCTYPE html><html><head><style>table{border-collapse:collapse;}td{width:50px;height:50px;text-align:center;font-size:24px;}</style></head><body><table><tr><td><div id="hand"></div></td><td><div id="deck"></div></td></tr></table><script>function r(a){return Math.floor(Math.random()*a)}function c(a){return Array.from({length:a},()=>r(4)))}let deck=c(52),hand=c(5),playerCards=[],dealerCards=[],gameState="deal";function deal(){playerCards=hand.splice(0,5);dealerCards=hand.splice(0,5);document.getElementById("hand").innerHTML="<div>Dealer</div><div id='dealerCards'></div><div>Player</div><div id='playerCards'></div>";for(let i=0;i<5;i++){document.getElementById("dealerCards").innerHTML+="<div>"+dealerCards[i]+"</div>";document.getElementById("playerCards").innerHTML+="<div>"+playerCards[i]+"</div>"}}function shuffle(){deck=c(52);for(let i=0;i<1000;i++){let j=r(52);let temp=deck[i];deck[i]=deck[j];deck[j]=temp}}function playGame(){shuffle();deal();gameState="bet";document.getElementById("dealerCards").innerHTML+="<div>Dealer</div><div>?</div><div>?</div>";document.getElementById("playerCards").innerHTML+="<div>Player</div><div>?</div><div>?</div><div>?</div><div>?</div><div>?</div>"}function bet(){if(gameState=="bet"){document.getElementById("dealerCards").innerHTML+="<div>?</div>";gameState="revealDealer"}else if(gameState=="revealDealer"){let dealerCard=dealerCards.pop();document.getElementById("dealerCards").innerHTML+="<div>"+dealerCard+"</div>";if(dealerCard==14){alert("Dealer has Blackjack. Dealer wins.");return}else if(dealerCard==1){gameState="dealerHitSoft1";return}else{document.getElementById("dealerCards").innerHTML+="<div>"+dealerCard+"</div>";gameState="revealPlayer"}}}function revealPlayer(){if(gameState=="revealPlayer"){let playerCard=playerCards.pop();document.getElementById("playerCards").innerHTML+="<div>"+playerCard+"</div>";if(playerCard==14){alert("Player has Blackjack. Player wins.");return}else if(playerCard==1){gameState="playerHitSoft1";return}else{document.getElementById("playerCards").innerHTML+="<div>"+playerCard+"</div>";if(playerCard+dealerCards[0]==21){alert("Blackjack! Dealer wins.");return}else if(playerCard+dealerCards[0]>21){alert("Player busts. Dealer wins.");return}else{gameState="playerHit";return}}}}function playerHit(){if(gameState=="playerHit"){let hitCard=hand.pop();document.getElementById("playerCards").innerHTML+="<div>"+hitCard+"</div>";if(hitCard==14){alert("Player has Blackjack. Player wins.");return}else if(hitCard==1){gameState="playerHitSoft1";return}else{document.getElementById("playerCards").innerHTML+="<div>"+hitCard+"</div>";if(hitCard+dealerCards[0]>21){alert("Player busts. Dealer wins.");return}else if(hitCard+dealerCards[0]==21){alert("Blackjack! Dealer wins.");return}else{gameState="playerHit";return}}}}function dealerHitSoft1(){if(gameState=="dealerHitSoft1"){let hitCard=hand.pop();document.getElementById("dealerCards").innerHTML+="<div>"+hitCard+"</div>";if(hitCard==1){gameState="dealerHitSoft1";return}else if(hitCard==14){alert("Dealer has Blackjack. Dealer wins.");return}else{document.getElementById("dealerCards").innerHTML+="<div>"+hitCard+"</div>";if(hitCard+playerCards[0]>21){alert("Dealer busts. Player wins.");return}else if(hitCard+playerCards[0]==21){alert("Dealer has Blackjack. Dealer wins.");return}else{gameState="dealerHit";return}}}}function dealerHit(){if(gameState=="dealerHit"){let hitCard=hand.pop();document.getElementById("dealerCards").innerHTML+="<div>"+hitCard+"</div>";if(hitCard==1){gameState="dealerHitSoft1";return}else if(hitCard==14){alert("Dealer has Blackjack. Dealer wins.");return}else{document.getElementById("dealerCards").innerHTML+="<div>"+hitCard+"</div>";if(hitCard+playerCards[0]>21){alert("Dealer busts. Player wins.");return}else if(hitCard+playerCards[0]==21){alert("Dealer has Blackjack. Dealer wins.");return}else{gameState="dealerHit";return}}}}playGame();</script></body>
