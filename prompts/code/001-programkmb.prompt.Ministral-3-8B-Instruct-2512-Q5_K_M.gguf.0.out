import java.util.*;
import java.util.regex.*;

public class NumberSumCalculator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder input = new StringBuilder();
        while (scanner.hasNextLine()) {
            input.append(scanner.nextLine()).append("\n");
        }
        scanner.close();

        String text = input.toString();
        Pattern pattern = Pattern.compile("\\s*([+-]?\\d{1,3}(?:,\\d{3})*(?:\\.\\d+)?)([kKmMgG]?)\\s*");
        Matcher matcher = pattern.matcher(text);
        double total = 0.0;

        while (matcher.find()) {
            String numberStr = matcher.group(1);
            String suffix = matcher.group(2).toLowerCase();

            double number = parseNumber(numberStr);
            double multiplier = getMultiplier(suffix);
            total += number * multiplier;
        }

        System.out.printf("%.1f%n", total);
        System.out.printf("%.1f k%n", total / 1024.0);
        System.out.printf("%.1f M%n", total / (1024.0 * 1024.0));
        System.out.printf("%.1f G%n", total / (1024.0 * 1024.0 * 1024.0));
    }

    private static double parseNumber(String numberStr) {
        numberStr = numberStr.replace(",", "");
        try {
            return Double.parseDouble(numberStr);
        } catch (NumberFormatException e) {
            throw new IllegalArgumentException("Invalid number format: " + numberStr);
        }
    }

    private static double getMultiplier(String suffix) {
        switch (suffix) {
            case "k": return 1024.0;
            case "m": return 1024.0 * 1024.0;
            case "g": return 1024.0 * 1024.0 * 1024.0;
            default: return 1.0;
        }
    }
}
