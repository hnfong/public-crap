def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        return f"{x//1000}K" if x//1000 < 1000 else f"{x/1000:.1f}K"
    elif x < 1000000000:
        return f"{x//1000000}M" if x//1000000 < 1000 else f"{x/1000000:.1f}M"
    else:
        return f"{x//1000000000}B" if x//1000000000 < 1000 else f"{x/1000000000:.1f}B"
