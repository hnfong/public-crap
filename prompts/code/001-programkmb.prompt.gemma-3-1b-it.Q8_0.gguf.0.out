import java.util.Scanner;

public class NumberSumCalculator {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();
        String[] numbers = input.split(",");

        double totalSum = 0;
        for (String number : numbers) {
            try {
                double num = Double.parseDouble(number.trim());
                if (number.equals("G")) {
                    num *= 1000;
                }
                if (number.equals("M")) {
                    num *= 1000000;
                }
                if (number.equals("K")) {
                    num *= 1000000000;
                }
                if (number.equals("K")) {
                    num *= 1000000000;
                }
                if (number.equals("M")) {
                    num *= 1000000000;
                }
                if (number.equals("G")) {
                    num *= 1000000000;
                }
                totalSum += num;
            } catch (NumberFormatException e) {
                System.out.println("Invalid number format.");
            }
        }

        System.out.println(totalSum);
        System.out.println(totalSum / 1000000.0);
        System.out.println(totalSum / 1000000000.0);
        System.out.println(totalSum / 10000000000.0);
        System.out.println(totalSum / 10000000000.0);
        scanner.close();
    }
}
