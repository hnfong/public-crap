import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;
import java.util.Locale;

public class SizeSummator {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder inputBuilder = new StringBuilder();
        
        while (scanner.hasNextLine()) {
            inputBuilder.append(scanner.nextLine()).append("\n");
        }
        String input = inputBuilder.toString();
        
        // Pattern explanation:
        // \\d{1,3}(?:,\\d{3})*(?:\\.\\d+)?  -> Matches numbers with optional comma thousand separators and decimal part
        // | \\d+(?:\\.\\d+)?                -> Matches simple numbers with optional decimal part (no commas)
        // We combine them to handle both cases: numbers with commas and without.
        // Actually, a more robust pattern for numbers with optional commas:
        // (?:\\d{1,3}(?:,\\d{3})*|\\d+)(?:\\.\\d+)?
        // Then followed by optional suffix [kKmMgG]
        
        Pattern pattern = Pattern.compile("(?:(?:\\d{1,3}(?:,\\d{3})*)|\\d+)(?:\\.\\d+)?[kKmMgG]?");
        Matcher matcher = pattern.matcher(input);
        
        double totalBytes = 0.0;
        
        while (matcher.find()) {
            String match = matcher.group();
            totalBytes += parseSize(match);
        }
        
        System.out.println(String.format(Locale.US, "%.1f", totalBytes));
        System.out.println(String.format(Locale.US, "%.1f k", totalBytes / 1024.0));
        System.out.println(String.format(Locale.US, "%.1f M", totalBytes / (1024.0 * 1024.0)));
        System.out.println(String.format(Locale.US, "%.1f G", totalBytes / (1024.0 * 1024.0 * 1024.0)));
        
        scanner.close();
    }
    
    private static double parseSize(String s) {
        if (s == null || s.isEmpty()) {
            return 0.0;
        }
        
        char suffix = '\0';
        int len = s.length();
        char lastChar = s.charAt(len - 1);
        
        if (lastChar == 'k' || lastChar == 'K' || lastChar == 'm' || lastChar == 'M' || 
            lastChar == 'g' || lastChar == 'G') {
            suffix = lastChar;
            s = s.substring(0, len - 1);
        }
        
        // Remove commas for parsing
        s = s.replace(",", "");
        
        double value;
        try {
            value = Double.parseDouble(s);
        } catch (NumberFormatException e) {
            return 0.0;
        }
        
        switch (suffix) {
            case 'k':
            case 'K':
                return value * 1024.0;
            case 'm':
            case 'M':
                return value * 1024.0 * 1024.0;
            case 'g':
            case 'G':
                return value * 1024.0 * 1024.0 * 1024.0;
            default:
                return value;
        }
    }
}
