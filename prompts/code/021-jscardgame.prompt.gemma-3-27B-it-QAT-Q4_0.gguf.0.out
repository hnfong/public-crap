<body>
<h1>Card Stack</h1>
<div id="deck"></div>
<div id="hand"></div>
<script>
let deck=[];const suits=['♥','♦','♣','♠'];const ranks=['2','3','4','5','6','7','8','9','T','J','Q','K','A'];
for(let s of suits)for(let r of ranks)deck.push(r+s);
deck.sort(()=>Math.random()-0.5);
let hand=[];
function deal(){if(deck.length>0)hand.push(deck.pop());renderHand();}
function renderHand(){const handDiv=document.getElementById('hand');handDiv.innerHTML='';for(let card of hand)handDiv.innerHTML+=`<div class="card">${card}</div>`;}
function checkWin(){return hand.length===0;}
function renderDeck(){const deckDiv=document.getElementById('deck');deckDiv.innerHTML='';if(deck.length>0)deckDiv.innerHTML+=`<div class="card">?</div>`;}
renderDeck();renderHand();
document.getElementById('hand').addEventListener('click',()=>deal());
</script>
</body>
</html>
