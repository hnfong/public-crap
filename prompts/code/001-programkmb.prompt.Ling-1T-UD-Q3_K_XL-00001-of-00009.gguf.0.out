import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.text.DecimalFormat;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class MemorySumCalculator {
    private static final Pattern NUMBER_PATTERN = Pattern.compile("([0-9,]+(?:\\.[0-9]+)?)\\s*([kKmMgG])?\\b");
    private static final DecimalFormat DECIMAL_FORMAT = new DecimalFormat("0.0");

    public static void main(String[] args) {
        try {
            StringBuilder input = new StringBuilder();
            try (BufferedReader reader = new BufferedReader(new InputStreamReader(System.in))) {
                String line;
                while ((line = reader.readLine()) != null) {
                    input.append(line).append("\n");
                }
            }

            double totalBytes = 0.0;
            Matcher matcher = NUMBER_PATTERN.matcher(input);

            while (matcher.find()) {
                String numberStr = matcher.group(1).replace(",", "");
                String suffix = matcher.group(2);

                try {
                    double value = Double.parseDouble(numberStr);
                    if (suffix != null) {
                        switch (suffix.toUpperCase()) {
                            case "K":
                                value *= 1024;
                                break;
                            case "M":
                                value *= 1024 * 1024;
                                break;
                            case "G":
                                value *= 1024 * 1024 * 1024;
                                break;
                        }
                    }
                    totalBytes += value;
                } catch (NumberFormatException ignored) {
                    // Skip invalid numbers
                }
            }

            System.out.println(DECIMAL_FORMAT.format(totalBytes));
            System.out.println(DECIMAL_FORMAT.format(totalBytes / 1024) + " k");
            System.out.println(DECIMAL_FORMAT.format(totalBytes / (1024 * 1024)) + " M");
            System.out.println(DECIMAL_FORMAT.format(totalBytes / (1024 * 1024 * 1024)) + " G");

        } catch (IOException e) {
            System.err.println("Error reading input: " + e.getMessage());
        }
    }
}
