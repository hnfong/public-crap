import java.util.Scanner;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class SizeConverter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        String input = scanner.nextLine();

        Pattern pattern = Pattern.compile("(\\d+(?:\\.\\d+)?)(?:,(\\d{3}))*(?:[kKmMgG])?");
        Matcher matcher = pattern.matcher(input);

        double totalBytes = 0;

        while (matcher.find()) {
            String numberPart = matcher.group(1).replace(",", "");
            String suffix = matcher.group(0).replaceAll("[\\d.,]", "");

            double value = Double.parseDouble(numberPart);

            switch (suffix.toLowerCase()) {
                case "k":
                    value *= 1024;
                    break;
                case "m":
                    value *= 1024 * 1024;
                    break;
                case "g":
                    value *= 1024 * 1024 * 1024;
                    break;
                default:
                    break;
            }

            totalBytes += value;
        }

        double totalKB = totalBytes / 1024;
        double totalMB = totalBytes / (1024 * 1024);
        double totalGB = totalBytes / (1024 * 1024 * 1024);

        System.out.printf("%.1f%n", totalBytes);
        System.out.printf("%.1f K%n", totalKB);
        System.out.printf("%.1f M%n", totalMB);
        System.out.printf("%.1f G%n", totalGB);
    }
}
