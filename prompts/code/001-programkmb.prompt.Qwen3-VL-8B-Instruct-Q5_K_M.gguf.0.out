import java.util.*;
import java.text.*;
import java.io.*;

public class Main {
    public static void main(String[] args) throws IOException {
        Scanner scanner = new Scanner(System.in);
        StringBuilder input = new StringBuilder();
        while (scanner.hasNextLine()) {
            input.append(scanner.nextLine()).append("\n");
        }
        scanner.close();
        
        String text = input.toString();
        String[] lines = text.split("\n");
        double total = 0.0;
        
        for (String line : lines) {
            String[] parts = line.split("\\s+");
            for (String part : parts) {
                part = part.trim();
                if (part.isEmpty()) continue;
                
                // Remove trailing commas if any
                if (part.endsWith(",")) {
                    part = part.substring(0, part.length() - 1);
                }
                
                // Check for suffixes
                String suffix = "";
                double value = 0.0;
                int suffixIndex = part.length() - 1;
                
                // Check for suffixes (k, K, m, M, g, G)
                if (suffixIndex >= 0 && 
                    (part.charAt(suffixIndex) == 'k' || part.charAt(suffixIndex) == 'K' ||
                     part.charAt(suffixIndex) == 'm' || part.charAt(suffixIndex) == 'M' ||
                     part.charAt(suffixIndex) == 'g' || part.charAt(suffixIndex) == 'G')) {
                    suffix = part.substring(suffixIndex);
                    part = part.substring(0, suffixIndex);
                    suffixIndex = part.length() - 1;
                }
                
                // Handle comma-separated numbers
                if (part.contains(",")) {
                    part = part.replace(",", "");
                }
                
                try {
                    value = Double.parseDouble(part);
                } catch (NumberFormatException e) {
                    continue;
                }
                
                // Apply suffix multiplier
                if (suffix.equals("k") || suffix.equals("K")) {
                    value *= 1024.0;
                } else if (suffix.equals("m") || suffix.equals("M")) {
                    value *= 1024.0 * 1024.0;
                } else if (suffix.equals("g") || suffix.equals("G")) {
                    value *= 1024.0 * 1024.0 * 1024.0;
                }
                
                total += value;
            }
        }
        
        // Output total
        System.out.printf("%.1f\n", total);
        
        // Output in different units
        double kb = total / 1024.0;
        double mb = total / (1024.0 * 1024.0);
        double gb = total / (1024.0 * 1024.0 * 1024.0);
        
        System.out.printf("%.1f k\n", kb);
        System.out.printf("%.1f M\n", mb);
        System.out.printf("%.1f G\n", gb);
    }
}
