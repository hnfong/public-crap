import java.util.regex.Matcher;
import java.util.regex.Pattern;

public class MemorySum {

    public static void main(String[] args) {
        try {
            String input = System.console().readLine();
            if (input == null) {
                System.out.println("No input provided.");
                return;
            }

            double totalSum = 0.0;
            Pattern pattern = Pattern.compile("(\\d+(?:,\\d+)*)[KMkMGg]?");
            Matcher matcher = pattern.matcher(input);

            while (matcher.find()) {
                String numberString = matcher.group();
                numberString = numberString.replace(",", "");
                double number;
                try {
                    number = Double.parseDouble(numberString);
                } catch (NumberFormatException e) {
                    continue;
                }

                String suffix = matcher.group().substring(numberString.length());
                suffix = suffix.toUpperCase();

                double multiplier = 1.0;
                switch (suffix) {
                    case "K":
                        multiplier = 1024.0;
                        break;
                    case "M":
                        multiplier = 1024.0 * 1024.0;
                        break;
                    case "G":
                        multiplier = 1024.0 * 1024.0 * 1024.0;
                        break;
                }

                totalSum += number * multiplier;
            }

            System.out.printf("%.1f\n", totalSum);
            System.out.printf("%.1f K\n", totalSum / 1024.0);
            System.out.printf("%.1f M\n", totalSum / (1024.0 * 1024.0));
            System.out.printf("%.1f G\n", totalSum / (1024.0 * 1024.0 * 1024.0));

        } catch (Exception e) {
            System.err.println("Error processing input: " + e.getMessage());
        }
    }
}
