import java.util.Scanner;
import java.util.regex.Pattern;
import java.util.regex.Matcher;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        StringBuilder inputBuilder = new StringBuilder();
        
        while (scanner.hasNextLine()) {
            String line = scanner.nextLine();
            if (line.trim().isEmpty()) break;
            inputBuilder.append(line).append(" ");
        }
        
        String input = inputBuilder.toString();
        String pattern = "(\\d+(?:,\\d+)*(?:\\.\\d+)?)[kKmMgG]?";
        java.util.regex.Pattern r = java.util.regex.Pattern.compile(pattern);
        java.util.regex.Matcher m = r.matcher(input);
        
        double total = 0.0;
        
        while (m.find()) {
            String match = m.group();
            String numberPart = match.replaceAll("[kKmMgG]$", "");
            String cleanedNumber = numberPart.replaceAll(",", "");
            double value = Double.parseDouble(cleanedNumber);
            
            if (match.endsWith("k") || match.endsWith("K")) {
                value *= 1024;
            } else if (match.endsWith("m") || match.endsWith("M")) {
                value *= 1024 * 1024;
            } else if (match.endsWith("g") || match.endsWith("G")) {
                value *= 1024 * 1024 * 1024;
            }
            
            total += value;
        }
        
        System.out.printf("%.1f%n", total);
        System.out.printf("%.1f k%n", total / 1024);
        System.out.printf("%.1f M%n", total / (1024 * 1024));
        System.out.printf("%.1f G%n", total / (1024 * 1024 * 1024));
    }
}
