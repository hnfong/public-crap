def abbrev_num(x):
    if x < 1000:
        return str(x)
    elif x < 1000000:
        if x % 1000 < 500:
            return f"{x // 1000}K"
        else:
            return f"{(x + 500) // 1000}K"
    else:
        if x % 1000000 < 50000:
            return f"{x // 1000000}M"
        else:
            return f"{(x + 50000) // 1000000}M"
