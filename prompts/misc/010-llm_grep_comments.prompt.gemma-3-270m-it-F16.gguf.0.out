import os, sys
import subprocess
import tarfile
import shutil
import glob
import re

def download_check_and_install(script_path, download_path, check_path):
    try:
        # Check if the script is in the current directory
        if not os.path.dirname(script_path) == "$script_path":
            print("Script not found.")
            return

        # Check if the script is in the download directory
        if not os.path.dirname(download_path) == "$download_path":
            print("Download not found.")
            return

        # Download the script
        try:
            subprocess.check_call([script_path, "download", download_path])
            print("Script downloaded successfully.")
        except subprocess.CalledProcessError as e:
            print(f"Error downloading script: {e}")
            return

        # Install the script
        try:
            subprocess.check_call([script_path, "install", download_path])
            print("Script installed successfully.")
        except subprocess.CalledProcessError as e:
            print(f"Error installing script: {e}")
            return

        # Check if the script is in the current directory
        if not os.path.dirname(check_path) == "$check_path":
            print("Script not found.")
            return

        # Output the line
        print(f"Line: {check_path}")
        print(f"Line Number: {len(check_path)}")
    except Exception as e:
        print(f"An error occurred: {e}")
    finally:
        print("Script downloaded and installed.")
